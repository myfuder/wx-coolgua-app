
.bg-logo{
  background:rgba(155,155,155,1);
 }
 .bg {
   background-color: rgba(0,0,0,0.8);
 }
 .bg .choose {
   display: flex;
   flex-direction: column;
   width: 100vw;
   height: 100vh;
 }
 .title {
   height: 70vh;
   display: flex;
   align-items: center;
   justify-content: center;
   color: #fff;
   font-size: 40rpx;
   font-weight: 700;
   text-align:center;
 }
 .btn {
   height: 30vh;
   width: 100vw;
   justify-content: space-around;
   display: flex;
 }
 .close {
   background-color: #fb5250;
   height: 100rpx;
   width: 100rpx;
   padding: 24rpx;
   box-sizing: border-box;
   border-radius: 50%;
 }
 .answer {
   background-color: #0ac160;
 }
 .call {
   display: flex;
   position: relative;
 }
 .close-btn {
   z-index: 999;
   display: flex;
   width: 100vw;
   justify-content: space-around;
   box-sizing: border-box;
 }
 .time {
   height: 8vh;
   width: 100vw;
   text-align: center;
   padding-top: 60rpx;
   color: #fff;
 }
 .panel {
   z-index: 999;
   display: flex;
   width: 100vw;
   bottom: 40rpx;
   flex-direction: column;
   box-sizing: border-box;
   position: absolute;
 }
 .room {
   position: relative;
   height: 100vh;
   width: 100vw;
 }
 .operation {
   width: 100%;
   height: 100%;
 }
 .normal {
   background-color: transparent;
   height: 100rpx;
   width: 100rpx;
   padding: 20rpx;
   box-sizing: border-box;
   border: 4rpx solid #fff;
   border-radius: 50%;
 }