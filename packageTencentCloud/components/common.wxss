/*公用的css*/
.flex {
    display: flex;
}
.flex-c {
    display: flex;
    justify-content: center;
}

.flex-c-c {
    display: flex;
    align-items: center;
}
.space-between {
    display: flex;
    justify-content: space-between;
}
.space-around {
    display: flex;
    justify-content: space-around;
}
.align-items {
    display: flex;
    align-items: center;
}
.strong {
    font-weight: 600;
}
.h3 {
    font-size: 30rpx;
}
.h2 {
    font-size: 32rpx;
}
.fontsize {
    font-size: 28rpx;
}
.small {
    font-size: 24rpx;
}
.padding-top-10 {
    padding-top: 10rpx;
}
.padding-bottom-10 {
    padding-bottom: 10rpx;
}
.wx-button {
    padding: 5rpx 10rpx 5rpx 10rpx;
}
.button-line {
    border: 1px solid #ddd;
}
.wx-button.border-radius {
    border-radius: 40rpx;
}
.wx-button.grey {
    color: #85888D;
    background: #F4F8FB;
}
.wx-button.long {
    padding-left: 30rpx;
    padding-right: 30rpx;
}
.flex-1 {
    flex: 1;
}
.row-container {
    padding-left: 20rpx;
    padding-right: 20rpx;
}
.tag {
    color: #27c598;
    display: inline-flex;
    padding: 0rpx;
    padding-left: 4rpx;
    padding-right: 4rpx;
    background: #eafaf5;
    border: 1px solid #19c28c;
    border-radius: 5rpx;
    font-size: 24rpx;
}
.border-bottom {
    border: 1px solid #ddd;
}
.wx-button.primary{
    color:#fff;
    background: linear-gradient(0deg, rgba(50, 203, 159, 1) 0%, rgba(28, 191, 144, 1) 100%);
    border-color: rgba(50, 203, 159, 1);
}
.text-overflow-one {
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
}

.text-overflow-2 {
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
}
