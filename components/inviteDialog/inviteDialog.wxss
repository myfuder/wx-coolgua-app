@import "../../common.wxss";

/* begin 弹窗内容 */
.wx-popup {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, .5);
  z-index:9;
}
.popup-container {
  width: 626rpx;
  padding: 0 32rpx 50rpx;
  position: absolute;
  left: 50%;
  top: 50%;
  border-radius: 10rpx;
  transform: translate(-50%, -50%);
  overflow: hidden;
  background: #fff;
}
.form-area .form-item {
  margin-top: 28rpx;
}
.form-item .form-title {
  font-size: 28rpx;
  color:rgba(51,51,51,1);
  line-height: 34rpx;
}
.form-item .form-input-area {
  margin-top: 20rpx;
}
.form-input-area .input,
.form-input-area .date-area {
  width: 586rpx;
  height: 80rpx;
  border: 1px solid rgba(220,223,230,1);
  font-size:28rpx;
  color:#333333;
  line-height: 32rpx;
  padding: 0 20rpx;
}
.form-input-area .date-area {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.date-area .input {
  border: none;
  margin-left: 18rpx;
}
.date-area image {
  width: 28rpx;
  height: 28rpx;
}
.date-area text {
  font-size:28rpx;
  color:#666666;
  line-height: 32rpx;
  margin-left: 20rpx;
}
.picker {
  height: 80rpx;
  line-height: 80rpx;
}
.time-area {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.time-area .time-box {
  width: 300rpx;
  display: flex;
  flex-direction: column;
}
.time-box .date-area {
  width: auto;
}
.input-placeholder {
  color: #CCCCCC;
}
.form-input-area .textarea {
  width: 586rpx;
  height: 174rpx;
  border: 1px solid rgba(220,223,230,1);
  font-size:28rpx;
  color:#333333;
  line-height: 36rpx;
  padding: 18rpx 20rpx;
}
.popup-container .button-area {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 45rpx;
}
.popup-container .button-area .button {
  width: 249rpx;
  height: 69rpx;
  border-radius: 30rpx;
  border: 1px solid #FF0000;
  font-size: 28rpx;
  line-height: 34rpx;
  color: #FF0000;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-right: 40rpx;
  background-color: #fff;
}
.popup-container .button-area .button:last-child {
  margin-right: 0;
}
.popup-container .button-area .submit-button {
  color:rgba(255,255,255,1);
  background: #FF0000;
}
/**登录弹窗**/
.wx-popupDialog {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, .5);
  z-index: 9;
  overflow-y: hidden;
}
.wx-popupDialog .popup-containerDialog {
  width: 538rpx;
  padding: 0 76rpx;
  position: absolute;
  left: 50%;
  top: 50%;
  border-radius: 10rpx;
  transform: translate(-50%, -50%);
  overflow: hidden;
  background: #fff;
}
.wx-popup-topDialog {
  padding: 45rpx 0 0;
  display: flex;
  align-items: center;
}
.popup-top-item {
  width: 50%;
  text-align: center;
  padding-bottom: 19rpx;
  border-bottom: 1px solid #DCDFE6;
  font-size: 32rpx;
  color:#333333;
  line-height: 36rpx;
}
.popup-top-item.active {
  border-color: #FF2D2E;
  color: #FF2D30;
}
.wx-popup-conDialog{
  padding: 20rpx 0 50rpx;
}
.wx-popup-conDialog .input-areaDialog {
  height: 69rpx;
  margin-top: 27rpx;
  display: flex;
  align-items: center;
  padding: 0 22rpx;
  background-color: #F9F9F9;
  border-radius: 4rpx;
  box-sizing: border-box;
}
.wx-popup-conDialog .send-code-button {
  margin-left: 22rpx;
  width: 183rpx;
  height: 69rpx;
  background: linear-gradient(0deg,rgba(255,45,46,1) 0%,rgba(253,71,108,1) 100%);
  border-radius: 2px;
  margin-top: 27rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.popup-containerDialog .button-areaDialog {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 45rpx;
}
.popup-containerDialog .button-areaDialog .button {
  width: 249rpx;
  height: 69rpx;
  border-radius: 2px;
  border: 1px solid #FF2D30;
  font-size: 28rpx;
  line-height: 34rpx;
  color: #FF2D30;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-right: 40rpx;
}
.popup-containerDialog .button-areaDialog .submit-button {
  color: rgba(255,255,255,1);
  background: linear-gradient(0deg,rgba(255,45,46,1) 0%,rgba(253,71,108,1) 100%);
}
.popup-containerDialog .button-areaDialog .button:last-child {
  margin-right: 0;
}

.send-code-button text {
  font-size:28rpx;
  color:rgba(255,255,255,1);
  line-height: 34rpx;
}

.input-areaDialog .input {
  height: 69rpx;
  flex: 1;
  margin-left: 22rpx;
  border-left: 1px solid #EDEDED;
  padding-left: 30rpx;
  font-size: 28rpx;
  font-weight:400;
  color:#333333;
  line-height: 32rpx;
}
.wx-popup-conDialog .code-area {
  width: 334rpx;
}
.input-areaDialog image {
  width: 18rpx;
  height: 22rpx;
}
.input-areaDialog .pwd-img {
  width: 18rpx;
  height: 24rpx;
}
.input-areaDialog .phone-img {
  width: 18rpx;
  height: 26rpx;
}
.wx-popup-conDialog .code-img-areaDialog {
  display: flex;
  align-items: center;
}
.code-img-areaDialog .code-img {
  width: 110rpx;
  height: 55rpx;
  margin-left: 52rpx;
  margin-top: 27rpx;
}
.opt-areaDialog {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 40rpx;
}
.opt-areaDialog .opt-boxDialog {
  display: flex;
  align-items: center;
}
.opt-boxDialog image {
  width: 22rpx;
  height: 22rpx;
}
.opt-boxDialog text {
  font-size: 24rpx;
  color:rgba(102,102,102,1);
  line-height: 28rpx;
  margin-left: 26rpx;
}
.registerButtonDialog{
  font-size: 24rpx;
  margin:30rpx auto 0;
  text-align:center;
}
.registerButtonDialog .register{
  display:inline-block;
  color: rgb(255, 45, 48);
  font-size: 24rpx;

}
/* end 弹窗内容 */