/* components/custom-live-player/custom-live-player.wxss */
#custom-live-player {
  position: relative;
  width: 750rpx;
  height: 1000rpx;
}

#custom-live-player .stop-container {
  position: absolute;
  right: 20rpx;
  top: 20rpx;
  width: 60rpx;
  height: 60rpx;
}
.stop-container .stop-icon {
  width: 100%;
  height: 100%;
}

#custom-live-player .player {
  width: 100%;
  height: 100%;
}
#custom-live-player .player-control {
  position: absolute;
  display: flex;
  justify-content: center;
  align-items: center;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
}

#custom-live-player .player-control .playOrPause {
  color: white;
  width: 120rpx;
  height: 120rpx;
  justify-content: center;
  align-items: center;
}

#custom-live-player .barrage-container {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
}

#custom-live-player .message-list {
  padding: 0 30rpx;
  box-sizing: border-box;
  margin-bottom: 40rpx;
  max-width: 60%;
  max-height: 600rpx;
  
