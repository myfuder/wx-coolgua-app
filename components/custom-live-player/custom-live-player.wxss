.space-between {
  display: flex;
  justify-content: space-between;
}
.flex-c {
  display: flex;
  justify-content: center;
}
.align-items {
  display: flex;
  align-items: center;
}
.message-exhi-info{
  /* width:249rpx; */
  height:96rpx;
  background:rgba(0,0,0,0.4);
  border-radius:48rpx;
  margin-bottom:27rpx;
  
}
.label-text,.value-text{
  font-size:24rpx;
  color:#666666;
}
.butImg {
  display: flex;
  width: 150rpx;
  height: 150rpx;
  margin: 0 auto;
  justify-content: center;
  align-items: center;
  background: #ff0;
}
.butImg image {
  display: block;
  max-width: 150rpx;
  max-height: 150rpx;
  margin: 0 auto;
}
.box-text {
  font-size: 24rpx;
  color: #333333;
  overflow: hidden;
  text-overflow: ellipsis;
  display: block;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}

.jiantou{
  font-size: 28rpx;
  color: #fff;
  background: rgba(0,0,0,0.4);
  border-radius: 50%;
  width: 40rpx;
  height: 40rpx;
  text-align: center;
  margin-left:12rpx
}
.message-exhi-info-img{
  width:90rpx;
  height:90rpx;
  background:rgba(255,255,255,1);
  border:2rpx solid rgba(255,0,0,1);
  border-radius:50%;
}
.message-list .message-item {
  width:411rpx;
  /* height:81rpx; */
  background:rgba(0,0,0,0.3);
  border-radius:10rpx;
  font-size: 24rpx;
  box-sizing: border-box;
  padding: 10rpx;
  line-height: 1.3;
  margin-bottom: 10rpx;
}
.message-item text{
  line-height: 170%;
}
.message-list .message-item:last-child {
  margin-bottom: 40rpx;
}
.space-between {
  display: flex;
  justify-content: space-between;
}

.message-item .message {
  position: relative;
  width: 100%;
  flex-wrap: wrap;
  word-break: break-all;
  word-wrap: break-word;
  white-space: pre-wrap;
  color: white;
}

.message-item .nickname {
  position: relative;
  color: tomato;
  margin-right: 6rpx;
}

#custom-live-player .chat {
  width: 100%;
  padding: 0 30rpx;
  box-sizing: border-box;
  margin-bottom: 20rpx;
}

.chat .chat-wrapper {
  border-radius: 8rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  background-color: rgba(255, 255, 255, 0.3);
  width:350rpx;
  /* height:72px; */
  background:rgba(0,0,0,0.3);
}

.chat-wrapper .chat-input {
  flex: 1;
  padding: 10rpx 20rpx;
  font-size: 28rpx;
  color: #fff;
  
}
.chat-wrapper .chat-button {
  width: 80rpx;
  font-size: 28rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #fff;
  border: 1px solid #fff;
  margin-right: 20rpx;
  border-radius: 4rpx;
}



/**begin：登录弹窗**/
.wx-popupDialog {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, .5);
  z-index: 9;
  overflow-y: hidden;
}
.wx-popupDialog .popup-containerDialog {
  width: 538rpx;
  padding: 0 76rpx;
  position: absolute;
  left: 50%;
  top: 50%;
  border-radius: 10rpx;
  transform: translate(-50%, -50%);
  overflow: hidden;
  background: #fff;
}
.wx-popup-topDialog {
  padding: 45rpx 0 0;
  display: flex;
  align-items: center;
}
.popup-top-item {
  width: 50%;
  text-align: center;
  padding-bottom: 19rpx;
  border-bottom: 1px solid #DCDFE6;
  font-size: 32rpx;
  color:#333333;
  line-height: 36rpx;
}
.popup-top-item.active {
  border-color: #FF2D2E;
  color: #FF2D30;
}
.wx-popup-conDialog{
  padding: 20rpx 0 50rpx;
}
.wx-popup-conDialog .input-areaDialog {
  height: 69rpx;
  margin-top: 27rpx;
  display: flex;
  align-items: center;
  padding: 0 22rpx;
  background-color: #F9F9F9;
  border-radius: 4rpx;
  box-sizing: border-box;
}
.wx-popup-conDialog .send-code-button {
  margin-left: 22rpx;
  width: 183rpx;
  height: 69rpx;
  background: linear-gradient(0deg,rgba(255,45,46,1) 0%,rgba(253,71,108,1) 100%);
  border-radius: 2px;
  margin-top: 27rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.popup-containerDialog .button-areaDialog {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 45rpx;
}
.popup-containerDialog .button-areaDialog .button {
  width: 249rpx;
  height: 69rpx;
  border-radius: 2px;
  border: 1px solid #FF2D30;
  font-size: 28rpx;
  line-height: 34rpx;
  color: #FF2D30;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-right: 40rpx;
}
.popup-containerDialog .button-areaDialog .submit-button {
  color: rgba(255,255,255,1);
  background: linear-gradient(0deg,rgba(255,45,46,1) 0%,rgba(253,71,108,1) 100%);
}
.popup-containerDialog .button-areaDialog .button:last-child {
  margin-right: 0;
}

.send-code-button text {
  font-size:28rpx;
  color:rgba(255,255,255,1);
  line-height: 34rpx;
}

.input-areaDialog .input {
  height: 69rpx;
  flex: 1;
  margin-left: 22rpx;
  border-left: 1px solid #EDEDED;
  padding-left: 30rpx;
  font-size: 28rpx;
  font-weight:400;
  color:#333333;
  line-height: 32rpx;
}
.wx-popup-conDialog .code-area {
  width: 334rpx;
}
.input-areaDialog image {
  width: 18rpx;
  height: 22rpx;
}
.input-areaDialog .pwd-img {
  width: 18rpx;
  height: 24rpx;
}
.input-areaDialog .phone-img {
  width: 18rpx;
  height: 26rpx;
}
.wx-popup-conDialog .code-img-areaDialog {
  display: flex;
  align-items: center;
}
.code-img-areaDialog .code-img {
  width: 110rpx;
  height: 55rpx;
  margin-left: 52rpx;
  margin-top: 27rpx;
}
.opt-areaDialog {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 40rpx;
}
.opt-areaDialog .opt-boxDialog {
  display: flex;
  align-items: center;
}
.opt-boxDialog image {
  width: 22rpx;
  height: 22rpx;
}
.opt-boxDialog text {
  font-size: 24rpx;
  color:rgba(102,102,102,1);
  line-height: 28rpx;
  margin-left: 26rpx;
}
.registerButtonDialog{
  font-size: 24rpx;
  margin:30rpx auto 0;
  text-align:center;
}
.registerButtonDialog .register{
  display:inline-block;
  color: rgb(255, 45, 48);
  font-size: 24rpx;

}
/**end：登录弹窗**/
