.exhibition-area {
  /* padding: 0 24rpx; */
  height: 650rpx;
  overflow: hidden;
  position: relative;
}
.exh-list {
  animation: 100s rowup linear infinite normal;
  position: relative;
}
@keyframes rowup {
  0% {
      -webkit-transform: translate3d(0, 0, 0);
      transform: translate3d(0, 0, 0);
  }
  100% {
      -webkit-transform: translate3d(0, -50%, 0);
      transform: translate3d(0, -50%, 0);
  }
}
.exhibition-area .exhibition-item {
  height: 130rpx;
  box-sizing: border-box;
  padding: 0 24rpx;
  border-bottom: 1px solid #E6E9F4;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.exhibition-item .img-name {
  flex: 1;
  display: flex;
  align-items: center;
}
.img-name image {
  width: 80rpx;
  height: 80rpx;
  flex-shrink: 0;
}
.img-name text {
  font-size:24rpx;
  color:rgba(51,51,51,1);
  line-height:32rpx;
  margin-left: 14rpx;
  word-wrap: break-word;
  word-break: normal; 
}
.exhibition-item .num-text {
  width: 170rpx;
  flex-shrink: 0;
  font-size:24rpx;
  color:rgba(51,51,51,1);
  line-height:24rpx;
  margin-left: 42rpx;
}