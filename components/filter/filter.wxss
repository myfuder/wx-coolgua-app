/* packageExhibitor/pages/newedition/filter/filter.wxss */

page{
  width: 100%;
  height: 100%;
}
.dialog-box{
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,0.5);
  position: absolute;
  top: 0;
  z-index: 10000;

}
.demand-filter-box{
  width:600rpx;
  height:100%;
  background:#fff;
  /* background:rgba(255,255,255,1); */
  border-radius:20px;
  position: fixed;
  right: 0;
  bottom: 0;
}
.demand-filter-box .check-box{
  width:29rpx;
  height:29rpx;
  background:rgba(255,0,0,1);
  border-radius:2px;
  display: inline-block;
}
.demand-filter-box .check-box-none{
  width:29rpx;
  height:29rpx;
  background:rgba(255,255,255,1);
  border:1px solid rgba(242,242,242,1);
  border-radius:2px;
  display: inline-block;
  box-sizing: border-box;
}
.demand-filter-box .name{
  /* width:114rpx; */
  height:26rpx;
  font-size:28rpx;
  font-family:PingFang SC;
  font-weight:800;
  color:rgba(51,51,51,1);
  line-height:26rpx;
}
.demand-filter-box .child-item{
  /* width:160rpx; */
  height:60rpx;
  background:rgba(242,242,242,1);
  border-radius:30px;
  text-align: center;
  float: left;
  margin-top: 28rpx;
  margin-left: 28rpx;
  padding: 0 10rpx;
}
.demand-filter-box .child-item:nth-child(3n),.demand-filter-box .child-itemactive:nth-child(3n){
  margin-right: 0rpx;
}
.demand-filter-box .child-name{
  height:23rpx;
  font-size:24rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(51,51,51,1);
  line-height:23rpx;
  display: inline-block;
  box-sizing: border-box;
  padding: 0 5rpx;
}
.demand-filter-box .child-itemactive{
  /* width:160rpx; */
  height:60rpx;
  border-radius:30px;
  text-align: center;
  float: left;
  margin-top: 28rpx;
  margin-left: 28rpx;
  background:rgba(255,241,241,1);
  border:1px solid rgba(255,0,0,1);
  box-sizing: border-box;
  padding: 0 10rpx;
}
.demand-filter-box .child-itemactive .child-name{
  color: rgba(255,0,0,1);

}
.demand-filter-box .bottom-btns {
  top:930rpx;
  /* border-radius:0px 0px 10rpx 10rpx; */
  width: 599rpx;
  display:flex;
  justify-content:space-between;
  padding:0 32rpx;
  box-sizing: border-box;
  margin-top:15rpx;
}
.demand-filter-box .bottom-btns .button-reset{
  width:250rpx;
  height:70rpx;
  line-height:70rpx;
  background:rgba(255,255,255,1);
  border:1px solid rgba(183,183,183,1);
  border-radius:35px;
  box-sizing: border-box;
  text-align: center;
}
.demand-filter-box .bottom-btns .button-primary{
  width:250rpx;
  height:70rpx;
  line-height:70rpx;
  background:rgba(255,0,0,1);
  border-radius:35px;
  text-align: center;
  color: #fff;
}