/* components/video-live-page/index.wxss */
.video-live-item{
  position:relative;
  width:330rpx;
  height:330rpx;
  background:#fcfafa;
  border-radius:10rpx;
  display: inline-block;
}
.page-img{
  width:100%;
  height:100%;
}
.video-live-item .video-living{
  position: absolute;
  left:20rpx;top:20rpx;
  /* width:200rpx; */
  height:33rpx;
  background:#000000;
  line-height: 1.5;
  opacity:0.7;
  border-radius:10rpx;
  font-size:22rpx;
  color:#FFFFFF;
  padding:0 15rpx;
}
.video-living .video-living-icon{
  width:8rpx;
  height:8rpx;
  background:rgba(0,255,0,1);
  border-radius:50%;
  display: inline-block;
}
.video-live-item-off{
  position:absolute;
  width:75rpx;
  height:67rpx;
  top:50%;
  left:50%;
  transform: translate(-50%,-50%)
}
.video-live-item-on{
  position:absolute;
  font-size:32rpx;
  font-weight:bold;
  background:rgba(255,255,255,0.6);
  top:50%;
  left:50%;
  transform: translate(-50%,-50%);
  border:5rpx solid #FF0000;
  color:#333333;
  border-radius: 20rpx;
  /* width: 230rpx; */
  white-space: nowrap;
  padding: 0 20px;
  height:56rpx;
  text-align: center;
  display: block; 
}
.sanjiao{
  margin-left: 17rpx;
  position:absolute;
  right:-4rpx;
  width: 0; 
  height: 0;
  margin-top: 8rpx;
  border-width: 20rpx;
  border-style: solid;
  border-color: transparent transparent transparent #FF0000;
}
.video-live-item-name{
  position:absolute;
  text-align: center;
  color:#fff;
  bottom:0;
  width:100%;
  height:50rpx;
  font-size:28rpx;
  background:rgba(0,0,0,0.4);
}