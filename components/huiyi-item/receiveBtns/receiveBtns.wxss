@import "../../../common.wxss";

.btn {
  /*width:310px;*/
  /*height:80px;*/
  color: #222;
  border-radius: 40px;
  font-size: 28rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: center;
  align-self: center;
}

.btn {
  display: inline-flex;
  flex-direction: column;
}

.btn-primary {
  color: #fff;
  font-size: 28rpx;
  background:rgba(255,0,0,1);
}

.btn-grey {
  background: rgba(228, 228, 228, 1);
  color: #999999;
}

.btn-default {
  color:rgba(255,0,0,1);
  background: #fff;
  border:1px solid rgba(255,0,0,1);
}