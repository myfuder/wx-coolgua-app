@import "../../../common.wxss";

.btn {
  /*width:310px;*/
  /*height:80px;*/
  color: #222;
  border-radius: 6rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: center;
  align-self: center;
}

.btn {
  display: inline-flex;
  flex-direction: column;
}

.btn-primary {
  color: #fff;
  font-size: 28rpx;
  background:linear-gradient(90deg,rgba(255,45,46,1) 0%,rgba(253,71,108,1) 100%);
}

.btn-grey {
  background: rgba(228, 228, 228, 1);
  color: #999999;
}

.btn-default {
  color: #999999;
  background: #fff;
  border:1px solid #999999;
}