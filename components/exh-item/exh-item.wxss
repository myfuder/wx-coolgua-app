.tagsHidden{
  height:115rpx;
  overflow:hidden;
}
.tagsShow{
}
.more{
  padding: 0 20rpx 0 20rpx;
  text-align:right;
}
.more image{
  width: 45rpx;
  height: 25rpx;
}

.clearfix:after{
  content:".";
  display:block;
  height:0;
  clear:both;/*清除浮动*/
  visibility:hidden;
}
.clearfix{zoom:1;/*为IE6，7的兼容性设置*/}
.appointmentNum{
  float:right;
  color:#1dc091;
  font-size:26rpx;
  padding: 0 20rpx 0 20rpx;
}
.exhibitorSee{
  position:absolute;
  right:0;
  top:70rpx;
  background:#e1f8f1;
  color:#2fc99d;
  font-size:24rpx;
  border-radius:30rpx 0 0 30rpx;
  padding:10rpx 10rpx 10rpx 15rpx;
}

.text-overflow-one {
