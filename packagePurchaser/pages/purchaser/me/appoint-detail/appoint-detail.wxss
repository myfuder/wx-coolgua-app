/**index.wxss**/

page{
  width:100%;
  /* height:100%; */
}
.container{
  width:100%;
  /* height:100%; */
  position:relative;
  /* background:#f5f5f5; */
  box-sizing: border-box;
}
.con-area {
  width: 750rpx;
  background-color: #F8F8F8;
}
.con-area .top-area {
  padding: 40rpx 30rpx 60rpx;
  background-color: #FFF;
}
.appoint-buttons {
  display: flex;
  margin-top:30rpx;
}
.appoint-buttons .go-meeting {
  /* width: 160rpx; */
  padding: 0 25rpx;
  margin: 0 auto;
  background:linear-gradient(90deg,rgba(255,45,46,1) 0%,rgba(253,71,108,1) 100%);
}
.button-text {
  font-size:28rpx;
  color:rgba(255,255,255,1);
  line-height: 30rpx;
}
.go-meeting,
.count-down {
  height: 60rpx;
  border-radius:2px;
  display: flex;
  justify-content: center;
  align-items: center;
}
.appoint-buttons .count-down {
  margin-left: 30rpx;
  width: 400rpx;
  background-color: #909399;
}
.rule-area {
  display: flex;
  margin-top: 55rpx;
}
.rule-area .rule-label {
  font-size: 26rpx;
  color:rgba(102,102,102,1);
  line-height: 48rpx;
  flex-shrink: 0;
}
.rule-area .rule-value {
  margin-left: 35rpx;
  display: flex;
  flex-direction: column;
}
.rule-value text {
  font-size:26rpx;
  color:rgba(102,102,102,1);
  line-height: 48rpx;
}
/* 详细信息列表 */
.detail-list {
  background-color: #FFF;
  margin-top: 20rpx;
  padding: 20rpx 0;
}
.detail-list .detail-item {
  padding: 29rpx 53rpx;
  display: flex;
  flex-direction: column;
  border-bottom: 1px solid #E4E7ED;
}
.detail-item text {
  margin-top: 15rpx;
  font-size: 24rpx;
  color:rgba(102,102,102,1);
  line-height: 26rpx;
}