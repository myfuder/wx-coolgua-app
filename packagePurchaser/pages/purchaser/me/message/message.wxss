/* packageExhibitor/pages/zEdition1/components/bizComponents/demand/index.wxss */
.content{
	width: 100%;
}
.item{
	width: 678rpx;
	height: 158rpx;
	margin-left: 36rpx;
	border-bottom: 1px solid rgba(241,241,241,1);
	display: flex;
	align-items: center;
	justify-content: space-around;
}
.item image{
	width:100rpx;
	height:100rpx;
	background:rgba(255,255,255,1);
	border:1px solid rgba(225,225,225,1);
	border-radius:6rpx;
}
.con{
	width: 558rpx;
	height: 100%;
}
.con .top {
	display: flex;
	align-items: center;
}
.con .top text:first-child{
	width: 300rpx;
	height: 40rpx;
	font-size:32rpx;
	font-family:Microsoft YaHei;
	color:rgba(0,17,27,1);
	line-height:48rpx;
	margin-top: 28rpx;
	overflow: hidden;
	text-overflow: ellipsis;white-space: nowrap;
	display: inline-block;
}
.con .top .time{
	flex: 1;
	height:30rpx;
	font-size:24rpx;
	font-family:Microsoft YaHei;
	color:rgba(153,153,153,1);
	margin-top: 40rpx;
}
.con .text{
	width:100%;
	height:34rpx;
	font-size:24rpx;
	font-family:Microsoft YaHei;
	color:#999;
	margin-top: 16rpx;
	overflow: hidden;
	text-overflow: ellipsis;white-space: nowrap;
}
.con .text .text-unreadCount{
	color:rgba(255,45,48,1)!important;
}