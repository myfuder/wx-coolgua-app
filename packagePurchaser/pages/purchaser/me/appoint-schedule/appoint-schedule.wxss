.week-item.redCount .innerBox{
  position: relative;
  width: 60rpx;
  height: 60rpx;
  border-radius: 100%;
  font-size: 24rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.week-item.currentSelectDay .innerBox{
  position: relative;
  width: 60rpx;
  height: 60rpx;
  background: #1CBF90;
  border-radius: 100%;
  color: #fff!important;
  font-size: 24rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.week-item.currentSelectDay .innerBox .week-text{
  color: #fff;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  padding-left: 0rpx;
  margin-left: 0rpx;
}
.week-item.redCount{
  position: relative;
}
.week-item.redCount .innerBox .red{
  color: #fff;
  position: absolute;
  top: 0px;
  right: -10rpx;
  border-radius: 100%;
  height: 30rpx;
  width: 30rpx;
  border-radius: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  background: red;
}

