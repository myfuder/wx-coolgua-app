/**index.wxss**/

page{
  width:100%;
  /* height:100%; */
}
.container{
  width:100%;
  /* height:100%; */
  position:relative;
  /* background-color:#F3F3F3; */
  box-sizing: border-box;
}
.con-main {
  width: 750rpx;
}
/* 顶部标签栏 */
.tab-area {
  padding-top: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.tab-area .tab-item {
  width: 201rpx;
  height: 78rpx;
  border:1px solid rgba(255,46,48,1);
  display: flex;
  align-items: center;
  justify-content: center;
}
.tab-area .tab-item:first-child {
  border-radius:6rpx 0rpx 0rpx 6rpx;
}
.tab-area .tab-item:last-child {
  border-radius:0rpx 6rpx 6rpx 0rpx;
}
.tab-area .tab-item.active {
  background:linear-gradient(90deg,rgba(255,45,46,1) 0%,rgba(253,71,108,1) 100%);
}
.tab-item text {
  font-size:28rpx;
  color:rgba(255,46,48,1);
  line-height:28rpx;
}
.tab-item.active text {
  color: #FFFFFF;
}
/* 顶部标签栏-完 */
.tab-con {
  margin-top: 9rpx;
}
/* .tab-con .module-item {
} */
.module-item .top-title {
  padding: 40rpx 40rpx 20rpx;
  display: flex;
  align-items: center;
}
.top-title image {
  width: 36rpx;
  height: 42rpx;
}
.top-title text {
  font-size:32rpx;
  color:rgba(51,51,51,1);
  line-height: 34rpx;
  margin-left: 28rpx;
}
.status-area {
  height: 80rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 27rpx 0 40rpx;
  background-color: #F3F3F3;
}
.status-area .status-item {
  /* width: 170rpx; */
  height: 100%;
  border-bottom: 2px solid #F3F3F3;
  display: flex;
  align-items: center;
  text-align: center;
}
.status-area .status-item.active {
  border-color: rgba(255,46,48,1);
}
.status-item text {
  font-size:24rpx;
  color:rgba(51,51,51,1);
  line-height:36rpx;
}
.status-item.active text {
  color:rgba(255,46,48,1);
}
/* 会议列表 */
.meeting-list {
  background-color: #F6F7FB;
  padding-bottom: 22rpx;
}
.meeting-list .meeting-item {
  background-color: #FFFFFF;
  padding: 40rpx 27rpx 40rpx 40rpx;
  margin-top: 22rpx;
}
.meeting-list .meeting-item:first-child {
  margin-top: 0;
}
.meeting-item .top-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.top-info .meeting-title {
  font-size:32rpx;
  font-weight:bold;
  color: #333333;
}
.top-info .cancel-area {
  display: flex;
  align-items: center;
}
.cancel-area image {
  width: 32rpx;
  height: 34rpx;
}
.cancel-area text {
  margin-left: 10rpx;
  font-size:28rpx;
  color: rgba(255,46,48,1);
  line-height:30rpx;
}
.info-box {
  margin-top: 10rpx;
  display: flex;
  flex-wrap: wrap;
}
.info-box text {
  font-size:24rpx;
  color:rgba(51,51,51,1);
  line-height: 36rpx;
}
.info-box .company-name {
  color: #666666;
}
.opt-area {
  margin-top: 50rpx;
  display: flex;
  justify-content: center;
  color: #fff;

}
.opt-area .opt-button {
  width:470rpx;
  height:81rpx;
  background:linear-gradient(90deg,rgba(255,45,46,1) 0%,rgba(253,71,108,1) 100%);
  border-radius:10rpx;
  display: flex;
  justify-content: center;
  align-items: center;

}
.opt-tixing{
  background:linear-gradient(90deg,rgba(255,45,46,1) 0%,rgba(253,71,108,1) 100%);
  width: 314rpx;
  border: 1px solid rgba(255,46,48,1);
  border-radius: 10rpx;
  font-size: 32rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
}
.opt-button text {
  font-size:32rpx;
  color:rgba(255,255,255,1);
  line-height: 36rpx;
}
/* 日程部分 */
.date-area {
  padding-top: 37rpx;
}
.date-area .date-title {
  display: flex;
  align-items: center;
  justify-content: center;
  padding-bottom: 10rpx;
}
.date-title image {
  width: 14rpx;
  height: 25rpx;
}
.date-title text {
  font-size:34rpx;
  font-weight:500;
  color:rgba(51,51,51,1);
  margin: 0 32rpx;
}
.day-area {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.week-box {
  width: 616rpx;
  display: flex;
  align-items: center;
}
.week-box .week-item {
  width: 88rpx;
  margin-top: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.week-item .week-text {
  font-size:23rpx;
  color:rgba(51,51,51,1);
  line-height: 20rpx;
  font-weight: 500;
}
.day-list {
  flex-wrap: wrap;
}
/* 日期部分-完 */
.date-tips {
  display: flex;
  align-items: center;
  padding-top: 30rpx;
  padding-bottom: 30rpx;
  padding-left:20rpx;
  font-size:30rpx;
  font-weight: 600;
}
.date-tips .date-img {
  width: 41rpx;
  height: 41rpx;
}
.date-tips text {
  font-size:32rpx;
  color:rgba(51,51,51,1);
  line-height: 36rpx;
}

