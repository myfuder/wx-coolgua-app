/**index.wxss**/

page {
  width: 100%;
  /* height:100%; */
}

.container {
  width: 100%;
  /* height:100%; */
  position: relative;
  /* background:#f5f5f5; */
  box-sizing: border-box;
}

.con-main {
  width: 750rpx;
}

.message-list .message-item {
}
.message-item .time-area {
  height: 50rpx;
  background-color: #F0F4F7;
  padding-left: 35rpx;
  display: flex;
  align-items: center;
}
.time-area text {
  font-size:24rpx;
  color:rgba(153,153,153,1);
  line-height: 28rpx;
}
.message-desc {
  padding: 40rpx 34rpx 40rpx 37rpx;
  background-color: #FFF;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.message-desc .message-info {
  display: flex;
  flex-direction: column;
}
.message-info .message-title {
  font-size:36rpx;
  font-weight:bold;
  color:rgba(51,51,51,1);
  line-height: 40rpx;
}
.message-info .message-time {
  font-size:28rpx;
  color:rgba(51,51,51,1);
  line-height: 32rpx;
  margin-top: 18rpx;
}
.message-info .message-detail {
  font-size:28rpx;
  color:rgba(153,153,153,1);
  line-height:32rpx;
  margin-top: 28rpx;
}
.message-desc image {
  width: 15rpx;
  height: 26rpx;
}