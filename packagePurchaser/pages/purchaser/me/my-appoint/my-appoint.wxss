/**index.wxss**/

page{
  width:100%;
}
.container{
  width:100%;
  /* height:100%; */
  position:relative;
  background:#f5f5f5;
  box-sizing: border-box;
}
.appoint-list {
  width: 100%;
}
.appoint-list .appoint-item {
  margin: 40rpx 30rpx;
  padding: 40rpx 30rpx;
  background-color: #FFF;
}
.appoint-item .appoint-info {
  display: flex;
  flex-direction: column;
}
.appoint-info .top-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-bottom: 9rpx;
}
.top-info .appoint-name {
  font-size:28rpx;
  color:rgba(51,51,51,1);
  line-height:32rpx;
  font-weight: 700;
}
.top-info .checked-area {
  display: flex;
  align-items: center;
}
.checked-area .checked-img {
  width: 31rpx;
  height: 23rpx;
}
.checked-area .checked-text {
  font-size:28rpx;
  color: #FF2D30;
  line-height: 32rpx;
  margin-left: 20rpx;
}
.info-item {
  display: flex;
  margin-top: 20rpx;
}
.info-item .info-label {
  font-size:24rpx;
  color:rgba(102,102,102,1);
  line-height:28rpx;
}
.top-info,
.info-item {
  padding-left: 23rpx;
}
.appoint-buttons {
  display: flex;
  margin-top: 50rpx;
  justify-content: center;
}
.appoint-buttons .go-meeting {
  width: 220rpx;
  background:linear-gradient(0deg,rgba(255,45,46,1) 0%,rgba(253,71,108,1) 100%);
}
.button-text {
  font-size:32rpx;
  color:rgba(255,255,255,1);
  line-height: 36rpx;
}
.go-meeting,
.count-down {
  height: 80rpx;
  border-radius:10rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.appoint-buttons .count-down {
  margin-left: 29rpx;
  width: 440rpx;
  background-color: #909399;
}