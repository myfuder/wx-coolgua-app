.demand-item .demand-desc {
  display: flex;
  align-items: center;
  /* flex-wrap: wrap; */
}
.demandImg{
  height:126rpx;
  width:126rpx;
  border:1px solid rgba(224,225,234,1);
  border-radius:10rpx;
}
.demandExplain{
  padding-left: 20rpx;
}
.demandName{
  font-size:30rpx;
  font-weight:bold;
  color:rgba(0,0,0,1);
}
.demand-desc .specification{
  font-size:24rpx;
  color:rgba(102,102,102,1);
}
.demand-desc .userName{
  font-size:24rpx;
  color:rgba(102,102,102,1);
}
.demand-desc .userJob{
  margin-left: 10rpx;
  font-size:24rpx;
  color:rgba(102,102,102,1);
}
.demand-desc .industry-item {
  background:#f4f8fb;
  border-radius:8rpx;
  height: 45rpx;
  line-height: 45rpx;
  padding: 5rpx 15rpx;
  font-size: 20rpx;
  color:#85888d;
  margin-right: 20rpx;
  margin-top: 10rpx;
}
.demand-desc text {
  font-size: 26rpx;
  color:#666666;
  line-height: 28rpx;
}
.demand-desc .status {
  font-size: 26rpx;
  color:#666666;
  line-height: 28rpx;
}
.demand-desc .name {
  font-size: 20rpx;
  color:#27c597;
  line-height: 28rpx;
  background:#ecfff9;
  border:1px solid #27c597;
  padding:10rpx 15rpx;
  border-radius:8rpx;
}
.publish-area{
  position:fixed;
  bottom:70rpx;
  right:30rpx;
}
.publish-area image{
  width:140rpx;
}
.collect{
  width:100%;
  display:flex;
  align-item:center;
  height:100rpx;
  line-height:100rpx;
}
.collect .collect-area{
  width:50%;
  text-align:center;
}
.collect .collect-area:first-child{
  border-right:1px solid #ededed;
}
.collect .collect-area image{
  width:40rpx;
}
.collect .collect-area text{
  color:#8590a6;
  font-size:30rpx;
  margin-left:30rpx;
}