/**index.wxss**/

page {
  width: 100%;
  min-height:100%;
  background:#f6f7fb;
}
.container {
  width: 100%;
  min-height:100%;
  padding:20rpx 30rpx;
  position: relative;
  box-sizing: border-box;
}
.con-main {
  width: 100%;
}
.demand-list {
  margin-bottom: 30rpx;
}
.demand-list .demand-item {
  background-color: #FFF;
  border-radius:10rpx;
  padding: 25rpx 25rpx 0;
  margin-bottom:30rpx;
  position:relative;
}
.demand-item .top-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-bottom: 8rpx;
}
.top-info text {
  flex: 1;
  font-size:30rpx;
  color: #333333;
  font-weight:bold;
  line-height: 28rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.edit-area {
  flex-shrink: 0;
  margin-left: 20rpx;
  display: flex;
  align-items: center;
}
.purchase{
  padding-bottom:20rpx;
  border-bottom:1px solid #ededed;
}
.hot-area {
  position:absolute;
  top:100rpx;
  right:30rpx;
  margin-left: 20rpx;
  display: flex;
  align-items: center;
}
