/**index.wxss**/

page{
  width:100%;
  /* height:100%; */
}
.container{
  width:100%;
  /* height:100%; */
  position:relative;
  /* background-color:#F3F3F3; */
  box-sizing: border-box;
}
.con-main {
  width: calc(100% - 66rpx);
  padding:33rpx;
}
.con-main-video-live .live-tab{
  font-size:36rpx;
  font-weight:bold;
  color:#333333;
  display: block;
  line-height: 30rpx;
}

.tab-area {
  padding-top: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.tab-area .tab-item {
  width: 201rpx;
  height: 78rpx;
  border:1px solid #22c592;
  display: flex;
  align-items: center;
  justify-content: center;
}
.tab-area .tab-item:first-child {
  border-radius:2px 0px 0px 2px;
}
.tab-area .tab-item:last-child {
  border-radius:0px 2px 2px 0px;
}
.tab-area .tab-item.active {
  background:#22c592;
}
.tab-item text {
  font-size:28rpx;
  color:#22c592;
  line-height:28rpx;
}
.tab-item.active text {
  color: #FFFFFF;
}
/* 视频列表 */
.video-list {
  background-color: #F3F3F3;
  padding-bottom: 20rpx;
}
.video-list .video-item {
  background-color: #FFFFFF;
  padding: 40rpx 32rpx 0;
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
}
.video-list .video-item:first-child {
  margin-top: 0;
}
.video-live-item .video-img {
  max-width: 100%;
  max-height: calc(100% - 33rpx);

}
.video-item .video-info {
  padding: 35rpx 11rpx 35rpx 29rpx;
}
.video-info .title {
  font-size:32rpx;
  color:rgba(51,51,51,1);
  line-height: 32rpx;
}
.video-info .company-info {
  margin-top: 17rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.company-info .company-name {
  font-size:28rpx;
  color:rgba(102,102,102,1);
  line-height: 30rpx;
}
.company-info .count-area {
  display: flex;
  align-items: center;
  margin-left: 20rpx;
}
.count-area image {
  width: 20rpx;
  height: 24rpx;
}
.count-area text {
  margin-left: 15rpx;
  font-size:28rpx;
  color:rgba(153,153,153,1);
  line-height: 28rpx;
}
.bottom-page{
  margin-bottom:30rpx
}
.con-main-video-live .intination-live{
  width:196rpx;
  height:64rpx;
  background:rgba(255,0,0,1);
  border-radius:32px;
  font-size:30rpx;
  font-family:Microsoft YaHei;
  font-weight:400;
  color:rgba(255,255,255,1);
  line-height:64rpx;
  text-align: center;
  float: right;
  margin-top: -70rpx;

}