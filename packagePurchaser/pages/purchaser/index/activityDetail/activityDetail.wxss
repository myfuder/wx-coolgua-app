/**activityDetail.wxss**/
.clearfix:after{
  content:".";
  display:block;
  height:0;
  clear:both;/*清除浮动*/
  visibility:hidden;
}
.clearfix{zoom:1;/*为IE6，7的兼容性设置*/}
page{
  width:100%;
  height:100%;
}
.activityDetail{
  width:100%;
  height:100%;
  position:relative;
  background:#f7f7f7;
}
.activityDetail .exhibitor-index{
  width: 100%;
  padding:25rpx 28rpx;
  box-sizing: border-box;
  background:#fff;
}
.activityHeader{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.activityRules{
  font-size:32rpx;
  font-weight:800;
  color:rgba(51,51,51,1);
}
.countdown{
  border:1px solid rgba(255,0,0,1);
  border-radius:10rpx;
  padding:10rpx 20rpx;
  font-size:24rpx;
  font-weight:400;
  color:rgba(255,0,0,1);
}
.ruleDetail{
  font-size:28rpx;
  padding-top: 20rpx;
  font-weight:500;
  color:rgba(51,51,51,1);
  line-height:48rpx;
}
.itemActivityBox{
  background:#f7f7f7;
  padding:6rpx 28rpx 31rpx 28rpx;
}
.itemActivity{
  display: flex;
  justify-content: space-between;
  align-items: center;
  background:rgba(255,255,255,1);
  border-radius:20rpx;
  padding:31rpx 32rpx;
  margin-top: 24rpx;
}
.itemTitle{
  font-size:32rpx;
  font-weight:bold;
  color:rgba(51,51,51,1);
}
.category{
  display: flex;
  justify-content:start;
  font-size:28rpx;
  font-weight:500;
  color:rgba(102,102,102,1);
  align-items: center;
}
.categoryBar{
  background:rgba(244,248,251,1);
  padding:12rpx;
  border-radius:4rpx;
  font-size:20rpx;
  font-weight:400;
  color:rgba(133,136,141,1);
}
.itemTime{
  font-size:28rpx;
  font-weight:500;
  color:rgba(102,102,102,1);
}
.entrance{
  font-size:28rpx;
  font-weight:400;
  background:rgba(255,0,0,1);
  border-radius:27rpx;
  color:rgba(255,255,255,1);
  padding:5rpx 20rpx;
}