/**index.wxss**/
@import "../../../../../common/css/live.wxss";

page {
  width: 100%;
  height: 100%;
  background:#f6f7fb;
}

.tab-container {
  width: 100%;
  position: relative;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  box-sizing: border-box;
  /* background:#f5f5f5; */
}

.top-area {
  padding: 30rpx 40rpx;
  background: #EFC0BC;
}

.top-area .personal-info {
  display: flex;
  align-items: center;
  position: relative;
}
.personal-info .user-img {
  width: 160rpx;
  height: 160rpx;
  border: 10rpx solid #fff;
  border-radius: 10rpx;
}

.personal-info .base-info {
  margin-left: 30rpx;
}

.base-info .user-name {
  font-size: 40rpx;
  font-weight: bold;
  line-height: 40rpx;
  display:inline-block;
  margin-right:30rpx;
  color:rgba(255,255,255,1);
}
.station{
  font-size: 20rpx;
  display: inline-block;
  color: #fff;
  padding:0 10rpx;
  border:1rpx solid #fff;
  border-radius: 5rpx;
  vertical-align: 15%;
}
.job{
  font-size:24rpx;
  color:rgba(255,255,255,1);
}
.productType{
  font-size:24rpx;
  color:rgba(255,255,255,1);
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  line-clamp: 1;
  -webkit-box-orient: vertical;
}
.compile{
  font-size:22rpx;
  color:rgba(128,128,128,1);
  padding:8rpx 47rpx;
  background:rgba(255,255,255,1);
  border-radius:4rpx;
}

.base-info .user-position{
  color:#27c597;
  font-size:20rpx;
  border:1px solid #27c597;
  border-radius:10rpx;
  background:#eafaf5;
  padding:4rpx 4rpx;
  position: relative;
  top: -10rpx;
  display:inline-block;
}
.base-info .user-company {
  font-size: 24rpx;
  color: #b5b5b5;
  line-height: 28rpx;
  margin-top: 20rpx;
}

.base-info .user-company {
  margin-top: 24rpx;
}

.edit-area {
  width: 150rpx;
  height: 60rpx;
  position: absolute;
  right: 0;
  top: 15rpx;
  background: #31ca9e;
  border-radius: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.edit-area image {
  width: 40rpx;
}
.edit-area text {
  font-size: 24rpx;
  color: #fff;
  line-height: 30rpx;
  margin-left: 9rpx;
}

.user-menu {
  margin-top:20rpx;
  padding: 20rpx 40rpx;
}
.menuB{
  width:100%;
  background:#fff;
  border-radius:10rpx;
}
.user-menu .user-box {
  
}
.user-box image {
  width: 64rpx;
}

.user-box .second-img {
  width: 60rpx;
  height: 58rpx;
}

.user-box .three-img {
  width: 60rpx;
  height: 57rpx;
}

.user-box .four-img {
  width: 60rpx;
  height: 53rpx;
}

.user-box .five-img {
  width: 67rpx;
  height: 51rpx;
}
.menuB .user-box{
  padding:30rpx;
}
.menuB .user-box .item{
  float:left;
  color:#333333;
  font-size:30rpx;
  display:flex;
  align-items:center;
}
.menuB .user-box .item image{
  width: 40rpx;
  margin-right:20rpx;
}
.user-value {
  float:right;
  color:#c1c1c1;
  font-size:26rpx;
  display:flex;
  align-items:center;
}
.user-value image{
  display:inline-block;
  margin-left:20rpx;
  width:15rpx;
}
.user-value .value-text {
  color:#c1c1c1;
  font-size:26rpx;
}

.logout-area {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom:40rpx;
}

.logout-area .logout-button {
  width: 320rpx;
  height: 80rpx;
  background: linear-gradient(90deg, rgba(255, 45, 46, 1) 0%, rgba(253, 71, 108, 1) 100%);
  border-radius: 10rpx;
  font-size: 32rpx;
  color: rgba(255, 255, 255, 1);
  line-height: 34rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
/*切换展商*/
.footer{
	height: 80rpx;
	display: flex;
	justify-content: space-around;
  padding: 30rpx 40rpx 15rpx;
}
.footer .tab-ticket{
	width:100%;
	height:80rpx;
	border-radius:30rpx;
	font-size:36rpx;
	font-family:Microsoft YaHei;
	line-height:80rpx;
	text-align:center;
  background:rgba(255,0,0,1);
	color:#fff!important;
	text-align:center;
}
/*语言切换*/
.language{
  width:100%;
  text-align:center;
  color:#27c597;
  font-size:28rpx;
  margin-bottom:30rpx;
}