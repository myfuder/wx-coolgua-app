/* packagePurchaser/pages/newpurchaser/index.wxss */

.language-change{
  text-align: right;
}
.language-change view{
  width:40rpx;
  height:40rpx;
  font-size:28rpx;
  font-weight:bold;
  float:right;
  color:#f00;background:#fff;margin-left:10rpx;
  border:1px solid #f00;
}
.lauguage-active{
  color:#FFFFFF !important;
  background: #f00 !important;
}
.buttons-area {
  display: flex;
  justify-content: flex-start;
  flex-wrap: wrap;
  box-sizing: border-box;
  padding: 40rpx 0 40rpx 0;
}
.buttons-area .button-box {
  width: 25%;
  text-align: center;
}
.buttons-area .en-button-box {
  width: 25%;
  text-align: center;
}
.buttons-area .button-box .butImg{
  display: flex;
  width: 100rpx;
  height: 100rpx;
  margin: 0 auto;
  justify-content: center;
  align-items: center;
  /* background: #ff0; */
}
.buttons-area .button-box .butImg image{
  display: block;
  max-width: 90rpx;
  max-height: 90rpx;
  margin: 0 auto;
}
.button-box text {
  font-size:24rpx;
  color:#333333;
  overflow:hidden;
  text-overflow:ellipsis;
  display:block;
  -webkit-line-clamp:1;
  -webkit-box-orient:vertical;
}
.button-box .count {
  position: absolute;
  right: -5rpx;
  top: -5rpx;
  min-width: 24rpx;
  height: 24rpx;
  padding: 0 8rpx;
  box-sizing: border-box;
  background-color: #FF0000;
  text-align: center;
  border-radius: 50%;
  font-size:17rpx;
  color:rgba(255,255,255,1);
  line-height: 24rpx;
}
.con-main-video-live .live-tab{
  font-size:36rpx;
  font-weight:bold;
  color:#333333;
  display: block;
  line-height: 30rpx;
}

.s-class-header{
  background: #FF0000;
  color:#fff
}

.hot-item-name {
  position: absolute;
  text-align: center;
  color: #fff;
  bottom: 10rpx;
  width: 100%;
  height: 50rpx;
  font-size: 28rpx;
  background: rgba(0,0,0,0.4);
}
