/* 按钮区域 */
.buttons-area {
  display: flex;
  justify-content: flex-start;
  flex-wrap: wrap;
  box-sizing: border-box;
  padding: 50rpx 30rpx 20rpx;
  background: #f6f7fb;
}
.buttons-area .button-box {
  width: 25%;
  text-align: center;
  margin-bottom:20rpx;
}
.buttons-area .en-button-box {
  width: 25%;
  text-align: center;
  margin-bottom:30rpx;
}
.buttons-area .button-box .butImg{
  display: flex;
  width: 90rpx;
  height: 120rpx;
  margin: 0 auto;
  justify-content: center;
  align-items: center;
}
.buttons-area .button-box .butImg image{
  display: block;
  max-width: 90rpx;
  max-height: 100rpx;
  margin: 0 auto;
}
.button-box text {
  font-size:24rpx;
  color:#333333;
  overflow:hidden;
  text-overflow:ellipsis;
  display:block;
  -webkit-line-clamp:1;
  -webkit-box-orient:vertical;
}
.button-box .count {
  position: absolute;
  right: -5rpx;
  top: -5rpx;
  min-width: 24rpx;
  height: 24rpx;
  padding: 0 8rpx;
  box-sizing: border-box;
  background-color: #FF0000;
  text-align: center;
  border-radius: 50%;
  font-size:17rpx;
  color:rgba(255,255,255,1);
  line-height: 24rpx;
}
