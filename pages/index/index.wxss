/* 主体开始 */
.con-area {
  padding: 0rpx 30rpx 30rpx;
  background:#f6f7fb;
}
.con-area .tab-area {
  width:100%;
}
.con-area .tab-area .remmord{
  float:left;
  margin-top: 10rpx;
}
.tab-area .tab-box {
  display: inline-block;
}
.tab-box:first-child {
  position: relative;
  padding-right:20rpx;
}
.tab-box:first-child:after {
  content: "";
  position: absolute;
  width: 2rpx;
  background: #cdcdcd;
  height: 30rpx;
  right: 0rpx;
  top:10rpx;
}
.tab-box:last-child {
  padding-left:20rpx;
}
.tab-box text {
  font-size:32rpx;
  color:#333333;
  line-height: 30rpx;
}
.tab-box.active text {
  color: #22c592;
  font-size:34rpx;
  font-weight:bold;
}
/* 展商列表 */
.exhibition-list {
  width: 100%;
  margin-top: 20rpx;
}
.exhibition-list .exhibition-item {
  padding: 40rpx 0;
  border-bottom: 1px solid #E1E1E1;
}
.exhibition-item .exhibition-info {
  display: flex;
  align-items: center;
  padding: 0 32rpx 0 35rpx;
}
.exhibition-info .logo-area {
  width: 150rpx;
  height: 150rpx;
  background-color: rgba(255,255,255,1);
  border: 1px solid rgba(225,225,225,1);
  border-radius: 10rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-shrink: 0;
}
.logo-area image {
  width: 98%;
  height: 98%;
}
.exhibition-info .detail-info {
  margin-left: 30rpx;
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.detail-info .company-name {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.company-name .name {
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size:28rpx;
  color:rgba(51,51,51,1);
  line-height: 34rpx;
}
.hot-area {
  margin-left: 20rpx;
  display: flex;
  align-items: center;
}
.hot-area image {
  width: 24rpx;
  height: 28rpx;
}
.hot-area text {
  font-size: 28rpx;
  color:rgba(255,46,46,1);
  line-height: 28rpx;
  margin-left: 9rpx;
}
.pavilion-number {
  margin-top: 16rpx;
  display: flex;
  align-items: center;
}
.industry-area {
  display: flex;
  margin-top: 6rpx;
}
.label-text,
.value-text {
  font-size:24rpx;
  color:rgba(102,102,102,1);
  line-height: 28rpx;
}
.value-text {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.industry-area .label-text {
  margin-top: 16rpx;
}
.industry-list {
  display: flex;
  flex-wrap: wrap;
}
.industry-list .industry-item {
  height: 40rpx;
  line-height: 40rpx;
  padding: 0 11rpx;
  font-size: 22rpx;
  color:rgba(255,46,46,1);
  border: 1px solid #FF2D2E;
  border-radius: 3px;
  margin-right: 20rpx;
  margin-top: 10rpx;
}
.opt-area {
  margin-top: 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 32rpx 0 35rpx;
}
.opt-area .opt-box {
  display: flex;
  align-items: center;
}
.opt-box image {
  margin-right: 50rpx;
}
.opt-box .message-img {
  width: 40rpx;
  height: 33rpx;
}
.opt-box .video-img {
  width: 48rpx;
  height: 30rpx;
}
.opt-box .phone-img {
  width: 38rpx;
  height: 38rpx;
}
.opt-area .opt-button {
  width: 160rpx;
  height: 60rpx;
  background:linear-gradient(90deg,rgba(255,45,46,1) 0%,rgba(253,71,108,1) 100%);
  border-radius: 2px;
  display: flex;
  align-items: center;
  justify-content: center;
}
.opt-button text {
  font-size:28rpx;
  color:rgba(255,255,255,1);
  line-height: 34rpx;
}
/* 展商列表查看更多 */
.more-area {
  font-size: 24rpx;
  color: #333333;
  float:right;
  border:1rpx solid #e3e3e3;
  border-radius:40rpx;
  padding:0 25rpx;
  height: 60rpx;
  line-height: 60rpx;
}
.matching-live-area {
  margin-top: 20rpx;
}
/* 弹窗内容 */
.popup-container {
  width: 626rpx;
  padding: 0 32rpx 50rpx;
}
.form-area .form-item {
  margin-top: 28rpx;
}
.form-item .form-title {
  font-size: 28rpx;
  color:rgba(51,51,51,1);
  line-height: 34rpx;
}
.form-item .form-input-area {
  margin-top: 20rpx;
}
.form-input-area .input,
.form-input-area .date-area {
  width: 586rpx;
  height: 80rpx;
  border: 1px solid rgba(220,223,230,1);
  font-size:28rpx;
  color:#333333;
  line-height: 32rpx;
  padding: 0 20rpx;
}
.form-input-area .date-area {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.date-area .input {
  border: none;
  margin-left: 18rpx;
}
.date-area image {
  width: 28rpx;
  height: 28rpx;
}
.date-area text {
  font-size:28rpx;
  color:#666666;
  line-height: 32rpx;
  margin-left: 20rpx;
}
.picker {
  height: 80rpx;
  line-height: 80rpx;
}
.time-area {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.time-area .time-box {
  width: 300rpx;
  display: flex;
  flex-direction: column;
}
.time-box .date-area {
  width: auto;
}
.input-placeholder {
  color: #CCCCCC;
}
.form-input-area .textarea {
  width: 586rpx;
  height: 174rpx;
  border: 1px solid rgba(220,223,230,1);
  font-size:28rpx;
  color:#333333;
  line-height: 36rpx;
  padding: 18rpx 20rpx;
}


