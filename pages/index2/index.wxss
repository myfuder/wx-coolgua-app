.friendship-item {
  width: 400rpx;
  height: 240rpx;
  margin-top: 30rpx;
  margin-right: 60rpx;
  border-radius: 20rpx;
  background-color: #FFFFFF;
  border:1px solid rgba(230,233,244,1);
  box-shadow:0px 6rpx 18rpx 0px rgba(207, 211, 207, 0.35);
}
/* .friendship-item:nth-child(2n) {
  margin-right: 0;
} */
.friendship-item image {
  width: 400rpx;
  height: 240rpx;
  border-radius: 20rpx;
}
/** 友情链接-完 */
