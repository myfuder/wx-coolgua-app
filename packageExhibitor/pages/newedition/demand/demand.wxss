/* packageExhibitor/pages/newedition/demand/demand.wxss */
page{
  width: 100%;
  height: 100%;
}
#demand-list{
  background:#F7F6F9;
  height: 100%;
  width: 100%;
  /* overflow-y: scroll; */
}
#demand-list .header .weui-input{
  width:548rpx;
  height:60rpx;
  background:rgba(243,243,243,1);
  border-radius:30rpx;
  padding: 0 99rpx 0 70rpx;
  box-sizing: border-box;
  min-height: 0;
  font-size: 28rpx;
}
#demand-list .header{
  width:100%;
  height:101rpx;
  line-height:101rpx;
  background:rgba(255,255,255,1);
  display: flex;
  align-items: center;
  justify-content: space-around;
  position: fixed;
  top: 0;
  /* position:absolute;
  top:0; */
}
#demand-list .header .search-box{
  position: relative;
  display: flex;
}
#demand-list .header .search-box-btn{
  width:99rpx;
  height:52rpx;
  line-height:52rpx;
  background:rgba(255,0,0,1);
  border-radius:26rpx;
  position: absolute;
  top: 4rpx;
  font-size: 28rpx;
  right: 0rpx;
  padding: 0;
  text-align: center;
  color: #fff;
}
#demand-list .header .filter{
  width:56rpx;
  height:26rpx;
  font-size:28rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(51,51,51,1);
  line-height:18rpx;
}
#demand-list .need-list{
  width: 100%;
  /* height: calc(100% - 203rpx); */
  /* overflow-y: scroll; */
  padding: 102rpx 0 10rpx 0;
  background:#F7F6F9;
}
#demand-list .need-list .item{
  width: 686rpx;
  /* height:488rpx; */
  background:rgba(255,255,255,1);
  border-radius:20px;
  box-sizing: border-box;
  margin: 20rpx 32rpx;
}
#demand-list .need-list .item .item-total{
  padding: 28rpx 21rpx 26rpx 21rpx;
  box-sizing: border-box;
}
#demand-list .need-list .item .item-total .item-name .need-img{
  width:126rpx;
  height:126rpx;
  background:rgba(255,255,255,1);
  border:1px solid rgba(224,225,234,1);
  border-radius:10rpx;
  margin-right: 23rpx;
}
#demand-list .need-list .item .item-total .item-name .need-img image{
  width:126rpx;
  height:126rpx;
  border-radius:10rpx;
  margin: auto;
}
#demand-list .need-list .item .item-name{
  display: flex;
  align-items: center;
}
#demand-list .need-list .item .top{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
#demand-list .need-list .item .title{
  /* width:153rpx; */
  height:30rpx;
  font-size:30rpx;
  font-family:Microsoft YaHei;
  font-weight:bold;
  color:rgba(0,0,0,1);
  line-height:36rpx;
}
#demand-list .need-list .item .hot{
  /* width:46rpx; */
  height:23rpx;
  font-size:28rpx;
  font-family:Microsoft YaHei;
  font-weight:400;
  color:rgba(255,46,46,1);
  line-height:36rpx;
}
#demand-list .need-list .right{
  flex-grow: 1;
}
#demand-list .need-list .item .labelStyle{
  height:25rpx;
  font-size:26rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(102,102,102,1);
  line-height:18rpx;
}
#demand-list .need-list .item .specifications,#demand-list .need-list .item .release{
  width: 100%;
}
#demand-list .need-list .item .item-category .category-item{
  /* width:80rpx; */
  height:19rpx;
  font-size:20rpx;
  font-family:PingFang SC;
  font-weight:400;
  color:rgba(133,136,141,1);
  line-height:18rpx;
  margin-right: 10rpx;
  display: inline-block;
}
#demand-list .need-list .item .specifications{
  margin: 15rpx 0;
}
#demand-list .need-list .item .item-category{
  /* display: flex;
  align-items: center; */
  padding: 19rpx 0 34rpx 0;
  border-bottom: 1px dashed rgba(204,204,204,1);
  box-sizing: border-box;
}
#demand-list .need-list .item .item-company {
  padding: 0 21rpx 32rpx 21rpx;
  box-sizing: border-box;
  border-bottom: 1px solid rgba(204,204,204,1);
}
#demand-list .need-list .item .item-company .name{
  /* width:89rpx; */
  height:28rpx;
  font-size:30rpx;
  font-family:PingFang SC;
  font-weight:400;
  color:rgba(0,0,0,1);
  line-height:36rpx;
}
#demand-list .need-list .item .item-company .posts{
  /* width:58rpx; */
  height:30rpx;
  border:1px solid rgba(255,0,0,1);
  border-radius:6rpx;
  display: inline-block;
  color:rgba(255,0,0,1);
  font-weight:500;
  font-size:20rpx;
  font-family:PingFang SC;
  line-height:30rpx;
  text-align: center;
  margin-left: 33rpx;
  padding: 0 10rpx;
}
#demand-list .need-list .item .item-company .company-name{
  /* width:245rpx; */
  height:23rpx;
  font-size:24rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(153,153,153,1);
  line-height:18rpx;
  margin-top: 18rpx;

}
#demand-list .need-list .item .item-booking {
  display: flex;
  padding: 26rpx 22rpx 26rpx 21rpx;
  box-sizing: border-box;
  align-items: center;
  justify-content: space-between;
}
#demand-list .need-list .item .item-booking .booking-btn{
  width:210rpx;
  height:70rpx;
  background:rgba(255,0,0,1);
  border-radius:35rpx;
  font-size:30rpx;
  font-family:Microsoft YaHei;
  font-weight:400;
  color:rgba(255,255,255,1);
  line-height:70rpx;
  text-align: center;
}
#demand-list .icons {
  display: flex;
}
#demand-list .icons view{
  width:70rpx;
  height:70rpx;
  line-height: 70rpx;
  text-align: center;
  background:rgba(255,0,0,1);
  opacity:0.05;
  border-radius:50%;
  margin-right: 30rpx;
  /* display: inline-block; */
}
#demand-list .icons image{
  width:38rpx;
  height:38rpx;
  vertical-align: middle;

}