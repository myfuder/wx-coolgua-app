/* packageExhibitor/pages/newedition/demandRelease/demandRelease.wxss */
#demand-release{
  width: 100%;
  height: 100%;
  background:#F7F6F9;
}
#demand-release .box{
  width: 100%;
  height: 100%;
  padding: 0 28rpx 0 27rpx;
  box-sizing: border-box;
  background:#fff;
}
#demand-release .common-item{
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 107rpx;
}
#demand-release .lableStyle{
  height:27rpx;
  font-size:28rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(102,102,102,1);
  line-height:18rpx;
}
#demand-release .common-item .name{
  height:28rpx;
  font-size:28rpx;
  font-family:Microsoft YaHei;
  font-weight:400;
  color:rgba(51,51,51,1);
  line-height:18rpx;
}
#demand-release .country-name{
  border-bottom: 1px solid rgba(245,245,245,1);
}
#demand-release .commodities-category .category-lable{
  margin:39rpx 0 41rpx 0;
  display: inline-block;
}
#demand-release .commodities-category .category-item .category-lable{
  height:26rpx;
  font-size:28rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(51,51,51,1);
  line-height:18rpx;
  margin-bottom: 32rpx;
}
/* #demand-release .commodities-category .category-item .category-list{
  overflow: hidden;
} */
#demand-release .commodities-category .category-item .category-list text{
  width:160rpx;
  height:60rpx;
  background:rgba(242,242,242,1);
  border-radius:30rpx;
  font-size:24rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(51,51,51,1);
  line-height:60rpx;
  display: inline-block;
  text-align: center;
  margin: 0 0 28rpx 18rpx;
  box-sizing: border-box;
}
#demand-release .commodities-category .category-item .category-list text:nth-child(4n+1){
  margin: 0 0 28rpx 0;
}
#demand-release .commodities-category .category-item .category-list .active{
  background:rgba(234,250,245,1);
  border:1px solid rgba(25,194,140,1);
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(39,197,151,1);
}
#demand-release .count-input{
  width:400rpx;
  height:23rpx;
  font-size:28rpx;
  font-family:Microsoft YaHei;
  font-weight:400;
  color:rgba(51,51,51,1);
  line-height:18rpx;
  text-align: right;
}
#demand-release .buyers-name .buyers-input{
  width:100%;
  height:26rpx;
  font-size:28rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(153,153,153,1);
  line-height:18rpx;
  margin: 20rpx 0 30rpx;
}
#demand-release .material{
  border-bottom: 1px solid rgba(245,245,245,1);
}
#demand-release .img-item .img-click{
  width:578rpx;
  height:90rpx;
  background:rgba(255,255,255,1);
  border:2px solid rgba(25,194,140,1);
  border-radius:6rpx;
  margin: 30rpx auto 81rpx;
  font-size:32rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(35,194,149,1);
  line-height:90rpx;
  text-align: center;
}
#demand-release .img-item .img-click:last-child{
  margin: 30rpx auto 41rpx;
}
#demand-release .img-item image{
  width: 400rpx;
  height: 400rpx;
  text-align: center;
}
#demand-release .btns {
  margin: 39rpx 0 41rpx;
  display: flex;
  justify-content: space-between;
}
#demand-release .btns .back-btn{
  width:330rpx;
  height:80rpx;
  background:rgba(255,255,255,1);
  border-radius:40rpx;
  font-size:36rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(51,51,51,1);
  line-height:80rpx;
}
#demand-release button::after{
  border: none;
}
#demand-release .btns .confirm-btn{
  width:330rpx;
  height:80rpx;
  line-height:80rpx;
  background:linear-gradient(0deg,rgba(50,203,159,1) 0%,rgba(28,191,144,1) 100%);
  border-radius:40px;
  font-size:36rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(255,255,255,1);
}