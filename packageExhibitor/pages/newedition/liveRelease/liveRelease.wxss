/* packageExhibitor/pages/newedition/liveRelease/liveRelease.wxss */
page{
  width: 100%;
  height: 100%;
}
#live-release{
  /* background:rgba(246,247,250,1); */
  height: 100%;
  width: 100%;
}
#live-release .content{
  background: #fff;
}
#live-release .content-item{
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 0 27rpx 0 28rpx;
  padding: 38rpx 0 37rpx 0;
  box-sizing: border-box;
  border-bottom: 1px solid rgba(245,245,245,1);
}
#live-release .content-lable{
  height:26rpx;
  font-size:28rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(102,102,102,1);
  line-height:26rpx;
}
#live-release .content-input{
  height:28rpx;
  font-size:28rpx;
  font-family:Microsoft YaHei;
  font-weight:400;
  color:rgba(51,51,51,1);
  line-height:28rpx;
  text-align: right;
}
#live-release .bottom-btns {
  width: 100%;
  display:flex;
  justify-content:space-between;
  padding:39rpx 30rpx 41rpx 28rpx;
  box-sizing: border-box;
  margin-top:15rpx;
  position: absolute;
  bottom: 0;
}
#live-release .bottom-btns .button-reset{
  width:330rpx;
  height:80rpx;
  line-height:80rpx;
  background:rgba(255,255,255,1);
  border:1px solid rgba(183,183,183,1);
  border-radius:35rpx;
  box-sizing: border-box;
  text-align: center;
  color: black;
}
#live-release .bottom-btns .button-primary{
  width:330rpx;
  height:80rpx;
  line-height:80rpx;
  background:rgba(255,0,0,1);
  border-radius:35rpx;
  text-align: center;
  color: #fff;
}
#live-release .weui-cell:before{
  border:0;
}
#live-release .button-chooseImg{
  width:300rpx;
  height:60rpx;
  background:rgba(255,255,255,1);
  border:2rpx solid rgba(148,148,148,1);
  border-radius:8px;
  font-size:28rpx;
  font-family:Microsoft YaHei;
  font-weight:400;
  color:rgba(102,102,102,1);
  line-height:60rpx;
  text-align: center;
}
#live-release .img-box{
  width:300rpx;
  height:300rpx;
  background:rgba(255,255,255,1);
  border:2rpx solid rgba(255,0,0,1);
  border-radius:10px;
  margin: 20rpx 0 21rpx;
}
#live-release .img-box image{
  width:300rpx;
  height:300rpx;
  border-radius:10px;
}
