/* packageExhibitor/pages/newedition/myInformation/myInformation.wxss */
page{
  width: 100%;
  height: 100%;
}
#my-information{
  background:rgba(246,247,250,1);
  height: 100%;
  width: 100%;
}
#my-information .header {
  text-align: center;
  background-color: #fff;
  padding-bottom: 59rpx;
}
#my-information .header .header-img{
  margin: 40rpx 0 28rpx;
  text-align: center;
}
#my-information .header .header-img image{
  width:146rpx;
  height:146rpx;
  background:rgba(246,247,251,1);
  border-radius:50%;
  border: 1px solid #ccc;
}
#my-information .header .changeClick{
  height:24rpx;
  font-size:24rpx;
  font-family:Microsoft YaHei;
  font-weight:400;
  color:#FF0000;
  line-height:24rpx;
  text-align: center;
}
#my-information .label{
  width:100%;
  height:70rpx;
  line-height:70rpx;
  padding:0 32rpx;
  font-size:24rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(102,102,102,1);
  box-sizing: border-box;
}
#my-information .content{
  background: #fff;
}
#my-information .content-item{
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 0 27rpx 0 28rpx;
  padding: 38rpx 0 37rpx 0;
  box-sizing: border-box;
  border-bottom: 1px solid rgba(245,245,245,1);
}
#my-information .content-lable{
  height:26rpx;
  font-size:28rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(102,102,102,1);
  line-height:26rpx;
  min-width: 200rpx;
}
#my-information .content-input{
  height:28rpx;
  font-size:28rpx;
  font-family:Microsoft YaHei;
  font-weight:400;
  color:rgba(51,51,51,1);
  line-height:28rpx;
  text-align: right;
}
#my-information .check-box{
  width:29rpx;
  height:29rpx;
  background:#FF0000;
  border-radius:2px;
  display: inline-block;
  margin-right: 9rpx;
  color: #fff;
}
#my-information .check-box-none{
  width:29rpx;
  height:29rpx;
  background:rgba(255,255,255,1);
  border:1px solid rgba(242,242,242,1);
  border-radius:2rpx;
  display: inline-block;
  box-sizing: border-box;
  margin-right: 9rpx;
  color: #fff;
}
#my-information .name{
  /* width:114rpx; */
  height:26rpx;
  font-size:28rpx;
  font-family:PingFang SC;
  font-weight:800;
  color:rgba(51,51,51,1);
  line-height:26rpx;
}
#my-information .child-item{
  /* width:160rpx; */
  height:60rpx;
  background:rgba(242,242,242,1);
  border-radius:30px;
  text-align: center;
  float: left;
  margin-top: 28rpx;
  margin-left: 28rpx;
  padding: 0 10rpx;
}
/* #my-information .child-item:nth-child(3n),#my-information .child-itemactive:nth-child(3n){
  margin-right: 0rpx;
} */
#my-information .child-name{
  /* height:23rpx; */
  font-size:24rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(51,51,51,1);
  line-height:30rpx;
  display: inline-block;
}
#my-information .child-itemactive{
  /* width:160rpx; */
  height:60rpx;
  border-radius:30px;
  text-align: center;
  float: left;
  margin-top: 28rpx;
  margin-left: 28rpx;
  background:rgba(255,241,241,1) !important;
  border:1px solid #FF0000;
  box-sizing: border-box;
  padding: 0 10rpx;
}
#my-information .child-itemactive .child-name{
  color: #FF0000;

}
#my-information .bottom-btns {
  display:flex;
  justify-content:space-between;
  padding:39rpx 30rpx 41rpx 28rpx;
  box-sizing: border-box;
  margin-top:15rpx;
  background:rgba(245,245,245,1);
}
#my-information .bottom-btns .button-reset{
  width:330rpx;
  height:80rpx;
  line-height:80rpx;
  background:rgba(255,255,255,1);
  border-radius:35rpx;
  box-sizing: border-box;
  text-align: center;
  color: black;
}
#my-information .bottom-btns .button-primary{
  width:330rpx;
  height:80rpx;
  line-height:80rpx;
  background:#FF0000;
  border-radius:35rpx;
  text-align: center;
  color: #fff;
}