.top_title{
	font-size: 32rpx;
	color: #333;
	text-align: center;
	font-weight: 600;
}
/* 列表项 */
.act_items{
	padding: 40rpx 53rpx 0 53rpx;
	font-size:24rpx;
	font-family:Microsoft YaHei;
	font-weight:400;
	color:rgba(102,102,102,1);
	/* line-height:20rpx; */
}
.items_title{
	font-size:28rpx;
	font-family:Microsoft YaHei;
	font-weight:600;
	color:rgba(51,51,51,1);
}
.items_record{
	margin: 10rpx 0 30rpx;
}
.items_btns{
	display: flex;
	justify-content: center;
	font-size:32rpx;
	font-family:Microsoft YaHei;
	font-weight:400;
	color:rgba(255,45,48,1);
	padding-bottom: 40rpx;
}
/* 中文样式 */
.items_btns .btnL_zh,
.items_btns .btnR_zh{
	/* width:220rpx; */
	padding:0 90rpx;
	height:80rpx;
	margin: 0 25rpx;
	border:1rpx solid rgba(255,45,48,1);
	border-radius:40rpx;
	line-height: 80rpx;
	text-align: center;
}
.items_btns .btnR_zh{
	color: #fff;
	background:rgba(255,0,0,1);
}
/* 英文样式 */
.items_btns .btnL_en,
.items_btns .btnR_en{
	width:330rpx;
	height:80rpx;
	border:1rpx solid rgba(255,45,48,1);
	border-radius:4rpx;
	font-size:28rpx;
	font-family:Microsoft YaHei;
	font-weight:400;
	text-align: center;
	line-height: 80rpx;
	margin: 0 15rpx;
}
.items_btns .btnL_en{
	color:rgba(255,45,48,1);
}
.items_btns .btnR_en{
	color: #fff;
	background:linear-gradient(0deg,rgba(255,45,46,1) 0%,rgba(253,71,108,1) 100%);
}

.fg_line{
	width: 100%;
	height:20rpx;
	background:rgba(248,248,248,1);
}