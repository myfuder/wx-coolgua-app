/**index.wxss**/

page{
  width: 100%;
  min-height: 100%;
  background:#f6f7fb;
}
.container{
  width:100%;
  /* height:100%; */
  position:relative;
  /* background-color:#F3F3F3; */
  box-sizing: border-box;
}
.con-main {
  width:100%;
}
/* 顶部标签栏 */
.tab-area {
  padding-top: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.tab-area .tab-item {
  width: 201rpx;
  height: 78rpx;
  border:1px solid #FF2D2E;
  display: flex;
  align-items: center;
  justify-content: center;
}
.tab-area .tab-item:first-child {
  border-radius:2px 0px 0px 2px;
}
.tab-area .tab-item:last-child {
  border-radius:0px 2px 2px 0px;
}
.tab-area .tab-item.active {
  background:linear-gradient(90deg,rgba(255,45,46,1) 0%,rgba(253,71,108,1) 100%);
}
.tab-item text {
  font-size:28rpx;
  color:rgba(255,46,48,1);
  line-height:28rpx;
}
.tab-item.active text {
  color: #FFFFFF;
}
/* 顶部标签栏-完 */
.tab-con {
  width:93%;
  margin:30rpx auto;
}
/* .tab-con .module-item {
} */
.module-item .top-title {
  padding: 40rpx 40rpx 20rpx;
  display: flex;
  align-items: center;
}
.top-title image {
  width: 36rpx;
  height: 42rpx;
}
.top-title text {
  font-size:32rpx;
  color:rgba(51,51,51,1);
  line-height: 34rpx;
  margin-left: 28rpx;
}
.status-area {
  height: 80rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 27rpx 0 40rpx;
  background-color: #F3F3F3;
}
.status-area .status-item {
  /* width: 170rpx; */
  height: 100%;
  border-bottom: 2px solid #F3F3F3;
  display: flex;
  align-items: center;
  text-align: center;
}
.status-area .status-item.active {
  border-color: #FF2D2E;
}
.status-item text {
  font-size:32rpx;
  color:rgba(51,51,51,1);
  line-height:36rpx;
}
.status-item.active text {
  color: #FF2E30;
}
/* 会议列表 */
.meeting-list {
  background-color: #F3F3F3;
  margin-top:20rpx;
  padding-bottom: 22rpx;
}
.meeting-list .meeting-item {
  background-color: #FFFFFF;
  border-radius:10rpx;
  padding:10rpx 15rpx;
  margin-top: 25rpx;
}
.meeting-item .top-info {
  margin-top:10rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.top-info .meeting-title {
  font-size:32rpx;
  font-weight:bold;
  color: #333333;
}
.top-info .cancel-area {
  display: flex;
  align-items: center;
}
.cancel-area image {
  width: 32rpx;
  height: 34rpx;
}
.cancel-area text {
  margin-left: 10rpx;
  font-size:28rpx;
  color:rgba(255,46,48,1);
  line-height:30rpx;
}
.info-box {
  margin-top: 10rpx;
  display: flex;
  flex-wrap: wrap;
}
.info-box text {
  font-size:24rpx;
  color:rgba(51,51,51,1);
  line-height: 36rpx;
}
.time-item .company-name {
  color: #2fc99d;
  font-size:24rpx;
  padding:8rpx 10rpx;
  background:#e1f8f1;
  border-radius:4rpx;
}
.opt-area {
  margin-top: 10rpx;
  display: flex;
  justify-content: center;
  
}
.opt-area .opt-button {
  /* width:315rpx; */
  padding: 0 25rpx;
  height:81rpx;
  background:linear-gradient(90deg,rgba(255,45,46,1) 0%,rgba(253,71,108,1) 100%);
  border-radius:10rpx;
  display: flex;
  justify-content: center;
  align-items: center;

}
.opt-button text {
  font-size:32rpx;
  color:rgba(255,255,255,1);
  line-height: 36rpx;
}
/* 日程部分 */
.date-area {
  padding: 35rpx 0;
  background:#fff;
  border-radius:10rpx;
}
.date-area .date-title {
  display: flex;
  align-items: center;
  justify-content: center;
  padding-bottom: 10rpx;
}
.date-title image {
  width: 16rpx;
  height: 50rpx;
}
.date-title text {
  font-size:34rpx;
  font-weight:500;
  color:rgba(51,51,51,1);
  margin: 0 32rpx;
}
.day-area {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.week-box {
  width: 616rpx;
  display: flex;
  align-items: center;
}
.week-box .week-item {
  width: 88rpx;
  margin-top: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.week-item .week-text {
  font-size:23rpx;
  color:rgba(51,51,51,1);
  line-height: 20rpx;
  font-weight: 500;
}
.day-list {
  flex-wrap: wrap;
}
/* 日期部分-完 */
.date-tips {
  display: flex;
  align-items: center;
  margin-top: 40rpx;
}
.date-tips .date-img {
  width: 41rpx;
  height: 41rpx;
}
.date-tips text {
  font-size:34rpx;
  color:#333333;
  line-height: 36rpx;
}

