/* 弹窗内容 */
.wx-popup {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, .5);
  z-index:9;
}
.popup-container {
  width: 626rpx;
  padding: 0 32rpx 50rpx;
  position: absolute;
  left: 50%;
  top: 50%;
  border-radius: 10rpx;
  transform: translate(-50%, -50%); 
  overflow: hidden;
  background: #fff;
}
.form-area .form-item {
  margin-top: 28rpx;
}
.form-item .form-title {
  font-size: 28rpx;
  color:rgba(51,51,51,1);
  line-height: 34rpx;
}
.form-item .form-input-area {
  margin-top: 20rpx;
}
.form-input-area .input,
.form-input-area .date-area {
  width: 586rpx;
  height: 80rpx;
  border: 1px solid rgba(220,223,230,1);
  font-size:28rpx;
  color:#333333;
  line-height: 32rpx;
  padding: 0 20rpx;
}
.form-input-area .date-area {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background:#fff;
  border-radius:10rpx;
}
.date-area .input {
  border: none;
  margin-left: 18rpx;
}
.date-area image {
  width: 28rpx;
  height: 45rpx;
}
.date-area text {
  font-size:28rpx;
  color:#666666;
  line-height: 32rpx;
  margin-left: 20rpx;
}
.picker {
  height: 80rpx;
  line-height: 80rpx;
}
.time-area {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.time-area .time-box {
  width: 300rpx;
  display: flex;
  flex-direction: column;
}
.time-box .date-area {
  width: auto;
}
.input-placeholder {
  color: #CCCCCC;
}
.form-input-area .textarea {
  width: 586rpx;
  height: 174rpx;
  border: 1px solid rgba(220,223,230,1);
  font-size:28rpx;
  color:#333333;
  line-height: 36rpx;
  padding: 18rpx 20rpx;
}
.popup-container .button-area {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 45rpx;
}
.popup-container .button-area .button {
  width: 249rpx;
  height: 69rpx;
  border-radius: 30rpx;
  border: 1px solid #FF2D30;
  font-size: 28rpx;
  line-height: 34rpx;
  color: #FF2D30;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-right: 40rpx;
  background-color: #fff; 
}
.popup-container .button-area .button:last-child {
  margin-right: 0;  
}
.popup-container .button-area .submit-button {
  color:rgba(255,255,255,1);
  background: linear-gradient(0deg,rgba(255,45,46,1) 0%,rgba(253,71,108,1) 100%);
}
