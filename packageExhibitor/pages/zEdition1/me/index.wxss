/* packageExhibitor/pages/zEdition1/me/index.wxss */
@import "../components/common.wxss";
.container{
  width: 100%;
}
.mine_top{
	/* width:100%;
	height:324rpx; */
	width:680rpx;
	height:260rpx;
	background:rgba(235,246,252,1);
	padding: 32rpx 34rpx;
}
.topcontent{
	width:680rpx;
	height:260rpx;
	background:rgba(255,255,255,1);
	box-shadow:-4rpx 8rpx 16rpx 0rpx rgba(64,116,225,0.13);
	border-radius:20rpx;
	/* margin-top: 32rpx;
	margin-left: 34rpx; */
	display: flex;
	position: relative;
}
.mine_logo{
	width:180rpx;
	height:180rpx;
	background:rgba(255,255,255,1);
	border:2rpx solid rgba(231,244,255,1);
	border-radius:20rpx;
	margin-left: 40rpx;
	margin-top: 40rpx;
}
.mine_logo image{
	width: 100%;
	height: 100%;
	border-radius:20rpx;
}
.mine_intro{
	width: 296rpx;
	height: 180rpx;
	margin-left: 26rpx;
	margin-top: 40rpx;
	display: flex;
	flex-direction: column;
	justify-content: space-around;
}
.mine_intro text:first-child{
	width: 296rpx;
	font-size:32rpx;
	font-family:Microsoft YaHei;
	font-weight:bold;
	color:rgba(51,51,51,1);
	overflow: hidden;
	white-space: nowrap;
	text-overflow: ellipsis;
}
.mine_intro text:nth-child(2),.mine_intro text:nth-child(3){
	font-size:26rpx;
	font-family:Microsoft YaHei;
	color:rgba(102,102,102,1);
	white-space: nowrap;
	overflow: hidden;
	width: 425rpx;
}
.viewblock{
	width:128rpx;
	height:48rpx;
	background:linear-gradient(90deg,rgba(255,45,46,1) 0%,rgba(253,71,108,1) 100%);
	border-top-left-radius:20rpx;
	border-bottom-left-radius:20rpx;
	top: 32rpx;
	right: 0;
	position: absolute;
	display: flex;
	align-items: center;
	justify-content: space-around;
}
.viewblock image{
	width: 28rpx;
	height: 20rpx;
}
.viewblock text{
	font-size:24rpx;
	font-family:Microsoft YaHei;
	color:rgba(255,255,255,1);
	line-height:48rpx;
}
.menu_list{
	background-color: #fff;
}
.menu_item{
	width: 274rpx;
	height: 70rpx;
	display: inline-block;
	margin: 52rpx 32rpx 80rpx 68rpx;
	position: relative;
}
.menu_item image{
	width: 56rpx;
	height: 58rpx;
	margin-top: 6rpx;
}
.itemcontent{
	position: absolute;
	top: 0;
	margin-left: 96rpx;
}
.itemcontent text:first-child{
	height: 30rpx;
	display: block;
	font-size:24rpx;
	font-family:Microsoft YaHei;
	color:rgba(51,51,51,1);
}
.itemcontent text:nth-child(2){
	height: 20rpx;
	display: block;
	font-size:20rpx;
	font-family:PingFang;
	color:rgba(153,153,153,1);
	margin-top: 10rpx;
	text-align: left;
}
.chinesemenu{
	font-size:30rpx!important;
}
.chinesemenu1{
	font-size:26rpx!important;
}
.mine_bottom{
	width: 100%;
	height: 80rpx;
	margin-top: 60rpx;
	display: flex;
	justify-content: space-around;
}
.user-img{
	width: 160rpx;
  height: 160rpx;
  border: 10rpx solid #fff;
  border-radius: 10rpx;
}
.compile{
  font-size:22rpx;
  color:rgba(128,128,128,1);
  padding:8rpx 47rpx;
  background:rgba(255,255,255,1);
  border-radius:4rpx;
}
.mine_bottom view{
	width:320rpx;
	height:80rpx;
	border:1px solid;
	border-image:linear-gradient(0deg, rgba(255,45,46,1), rgba(253,71,107,1)) 10 10;
	border-radius:10rpx;
	font-size:32rpx;
	font-family:Microsoft YaHei;
	color:rgba(255,46,48,1);
	line-height:80rpx;
	text-align:center;
}
.mine_bottom view:nth-child(2){
	background:linear-gradient(90deg,rgba(255,45,46,1) 0%,rgba(253,71,108,1) 100%)!important;
	color:rgba(255,255,255,1)!important;
	text-align:center;
}
.footer{
	width: 100%;
	height: 80rpx;
	margin-top: 60rpx;
	display: flex;
	justify-content: space-around;
}
.footer .tab-ticket{
	width:320rpx;
	height:80rpx;
	border:1px solid;
	border-image:linear-gradient(0deg, rgba(255,45,46,1), rgba(253,71,107,1)) 10 10;
	border-radius:10rpx;
	font-size:32rpx;
	font-family:Microsoft YaHei;
	color:rgba(255,46,48,1);
	line-height:80rpx;
	text-align:center;
	background:linear-gradient(90deg,rgba(255,45,46,1) 0%,rgba(253,71,108,1) 100%)!important;
	color:rgba(255,255,255,1)!important;
	text-align:center;
}
.mask{
	position: fixed;
	z-index: 900;
	top: 0;
	right: 0;
	bottom: 0;
	left: 0;
	background-color: rgba(0, 0, 0, 0.5);
}
.repasscon{
	width:691rpx;
	height:661rpx;
	background:rgba(255,255,255,1);
	border-radius:10rpx;
	position: absolute;
	z-index: 901;
	background-color: #fff;
	top: 220rpx;
	left: 30rpx;
}
.repasscon image{
	width: 70rpx;
	height: 70rpx;
	position: absolute;
	left: 310rpx;
	bottom: -120rpx;
}
.repasscon text{
	height:28rpx;
	font-size:28rpx;
	font-family:Microsoft YaHei;
	color:rgba(51,51,51,1);
	line-height:18rpx;
	margin:28rpx 32rpx 20rpx 32rpx ;
	display: block;
}
.repasscon input{
	width:626rpx;
	height:80rpx;
	background:rgba(255,255,255,1);
	border:1px solid rgba(220,223,230,1);
	margin-left: 32rpx;
	padding-left: 20rpx;
}
.confirm{
	width:315rpx;
	height:80rpx;
	background:linear-gradient(0deg,rgba(255,45,46,1) 0%,rgba(253,71,108,1) 100%);
	border-radius:4rpx;
	margin-left: 188rpx;
	margin-top: 60rpx;
	text-align: center;
	line-height: 80rpx;
	color:#fff;
}
.inp{
	font-size:28rpx;
	font-family:Microsoft YaHei;
	color:rgba(204,204,204,1);
}

/*语言切换*/
.language{
  margin-top: 20rpx;
  width:100%;
  text-align:center;
  color:#FF0000;
  font-size:28rpx;
  margin-bottom:30rpx;
}