/**activity.wxss**/
page{
  width:100%;
  height:100%;
}
.container{
  width:100%;
  height:100%;
  position:relative;
  background:#f7f7f7;
}
.container .exhibitor-index{
  width: 100%;
  padding: 31rpx 32rpx;
  box-sizing: border-box;
  background:#f7f7f7;
}
.container .exhibitor-index .section{
  background:#fff;
  border-radius:20rpx;
  padding:31rpx 32rpx;
  margin-bottom:20rpx;
}
.activityName{
  height:32rpx;
  font-size:32rpx;
  font-weight:bold;
  color:rgba(51,51,51,1);
  line-height:18rpx;
}
.activityTime{
  padding-top: 30rpx;
  font-size:28rpx;
  font-weight:500;
  color:rgba(51,51,51,1);
  line-height:36rpx;
}
.activityRoom ,.talkTime{
  padding-top: 19rpx;
  font-size:28rpx;
  font-weight:500;
  color:rgba(51,51,51,1);
  line-height:36rpx;
}
.countdownBox{
  display: flex;
  justify-content: center;
}
.countdown{
  margin-top: 40rpx;
  display: inline-block;
  background:rgba(228,228,228,1);
  border-radius:70rpx;
  font-size:32rpx;
  font-weight:500;
  color:rgba(102,102,102,1);
  padding:9rpx 38rpx;
}
.immediatelyBox{
  display: flex;
  justify-content: space-between;
}
.immediately{
  margin-top: 40rpx;
  display: inline-block;
  background:rgba(255,0,0,1);
  border-radius:70rpx;
  font-size:32rpx;
  font-weight:500;
  color:#fff;
  padding:9rpx 80rpx;
}
.ToDetail{
  margin-top: 40rpx;
  display: inline-block;
  border:1px solid rgba(255,0,0,1);
  border-radius:70rpx;
  font-size:32rpx;
  font-weight:500;
  color:rgba(255,0,0,1);
  padding:9rpx 80rpx;
}
