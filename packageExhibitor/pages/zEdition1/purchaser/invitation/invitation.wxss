/**invitation.wxss**/
.clearfix:after{
  content:".";
  display:block;
  height:0;
  clear:both;/*清除浮动*/
  visibility:hidden;
}
.clearfix{zoom:1;/*为IE6，7的兼容性设置*/}
page{
  width:100%;
  height:100%;
}
.container{
  padding:0 30rpx;
  height:100%;
  position:relative;
  background:#fff;
}
.container form{
  width:100%;
  height:100%;
  position:relative;
}
.container .formTitle{
  height: 70rpx;
  line-height: 70rpx;
  margin-bottom:30rpx;
}
.container .formTitle text{
  font-size:32rpx;
  color:#333333;
}
.container .item-top{
  font-size:26rpx;
  color:#333333;
}
.container .item-top image{
  width:20%;
  float:left;
}
.container .item-top .inform{
  float:left;
  margin-left:5%;
  margin-top:2%;
}
.container .item-top .inform .name{
  font-size:32rpx;
  color:#333333;
  font-weight:bold;
  margin-right:40rpx;
}
.container .item-top .inform .post{
  font-size:24rpx;
  color:#666666;
}
.container .item-top .inform view{
  font-size:26rpx;
  color:#666666;
  margin-top:1%;
}
.container .form-sign{
  font-size:28rpx;
  color:#333333;
  padding-top:30rpx;
}
.container .form-sign .form-item{
  display:flex;
  padding:20rpx 0;
  align-items: center;
  font-size:28rpx;
  color:#666666;
  border-bottom:1px solid #F5F5F5;
}
.container .form-sign .form-item .company{
  float:right;
}
.container .form-sign .form-item text{
  float:left;
  width:20%;
}
.container .form-sign .picker{
  width:65%;
  float:right;
  position:relative;
}
.container .form-sign .picker image{
  position:absolute;
  right:25rpx;
  top:20rpx;
  width:30rpx;
}
.container .form-sign .picker view{
  width:80%;
  text-align:right;
  font-size:28rpx;
  color:#666666;
}
.container .form-sign .form-item picker{
  width:80%;
}
.container .form-sign .form-notice{
  font-size:28rpx;
  color:#666666;
  border-bottom:1px solid #F5F5F5;
}
.container .form-sign .form-notice view{
  margin:20rpx 0;
}
.container .form-sign textarea{
  display:inline-block;
  width:96%;
  height:50rpx;
}
.footer{
  margin:80rpx auto 0;
  text-align:center;
}
.footer .tab-ticket{
  font-size:32rpx;
  background: #32CB9F;
  color:#fff;
  border-radius: 30rpx;
  padding:0 100rpx;
  height: 80rpx;
  line-height: 80rpx;
  margin:0 auto; 
  border:none;
  text-align:center; 
  display:inline-block;
}