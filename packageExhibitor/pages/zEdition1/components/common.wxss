.text-overflow-one {
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.text-overflow-2 {
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
}
