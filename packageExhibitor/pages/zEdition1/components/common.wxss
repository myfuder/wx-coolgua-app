.wx-card{
    background: #fff;
    border-radius: 10rpx;
}
.wx-card .wx-card-title{
    padding: 20rpx;
    font-size:32rpx;
    font-weight:bold;
    color:rgba(51,51,51,1);
    border-bottom: #EEEEEE 1px solid ;
}
.wx-card .wx-card-body{
    padding: 20rpx;
}

.wx-form-item{
    display: flex;
    align-items: center;
    font-size: 28rpx;
    padding: 26rpx;
    border-bottom: 1px solid #ddd;
}
.wx-form-item:last-child{
    border-bottom: none;
}

.wx-form-item .form-label {
    font-size: 28rpx;
    color: #666666;
    margin-right: 10rpx;
}
.wx-form-item .form-label.required{
    position: relative;
}
.wx-form-item .form-label.required:after{
    position: absolute;
    content: "*";
    color:red;
    right: 40rpx;
    top: -10rpx;

}
