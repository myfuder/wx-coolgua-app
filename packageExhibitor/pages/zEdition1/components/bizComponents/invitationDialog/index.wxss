/* packageExhibitor/pages/zEdition1/components/bizComponents/invitationDialog/index.wxss */
.outer-wrap{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 1000;
}
.content{
  width: 691rpx;
  height: 916rpx;
  position: absolute;
  top: 100rpx;
  left: 30rpx;
  border-radius: 10rpx;
  background-color: white;
  padding: 28rpx 36rpx;
  box-sizing: border-box;
}
.time-wrap{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin-top: 30rpx;
}
.time-wrap>view{
  width: 47%;
}
.picker{
  border: 1px solid #DCDFE6;
  height: 80rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size:28rpx;
  font-family:Microsoft YaHei;
  font-weight:400;
  color:rgba(102,102,102,1);
  padding-left: 21rpx;
}
input{
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
  border: 1px solid #DCDFE6;
  padding: 0 23rpx;
  box-sizing: border-box;

}
label{
  font-size:28rpx;
  font-family:Microsoft YaHei;
  font-weight:400;
  color:rgba(51,51,51,1);
  margin-bottom: 10rpx;
  margin-top: 20rpx;
  display: block;
}
label:first-of-type{
  margin-top: 0;
}
.picker-icon{
  width: 28rpx;
  height: 28rpx;
  margin-right: 18rpx;
}
textarea{
  width: 626rpx;
  height: 210rpx;
  border: 1px solid #DCDFE6;
  padding: 25rpx 21rpx;
  font-size:28rpx;
  font-family:Microsoft YaHei;
  box-sizing: border-box;
}
.footer{

  display: flex;
  box-sizing: border-box;
  flex-direction: row;
  justify-content: space-between;
  margin-top: 40rpx;
}
.footer>button{
  width:249rpx;
  height:69rpx;
  border-radius:4rpx;
  border:1px solid rgba(255,45,48,1);
  font-size: 28rpx;
}
.footer>button:first-of-type{
  background-color: white;
  color: rgba(255,45,48,1);
}
.footer>button:last-of-type{
  background-color: rgba(255,45,48,1);
  color: white;
}