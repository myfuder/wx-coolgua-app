/* packageExhibitor/pages/zEdition1/components/bizComponents/bizComponents/personConnect/index.wxss */
.person-img {
  width:150rpx;
  height:150rpx;
  border-radius:10rpx;
}
.hot-icon {
  width: 24rpx;
  height: 28rpx;
}
.connect-icon {
  width: 40rpx;
  height: 33rpx;
  margin-right: 50rpx;
}
.body{
  display: flex;
  flex-direction: row;
}
.btn{
  display: inline-block;
  padding-left: 30rpx;
  padding-right: 30rpx;
  height:60rpx;
  line-height: 60rpx;
  background:linear-gradient(90deg,rgba(255,45,46,1) 0%,rgba(253,71,108,1) 100%);
  border-radius:4rpx;
  font-size:28rpx;
  color: white;
  text-align: center;
  font-family:Microsoft YaHei;
  font-weight:400;
}
.footer{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin-top: 20rpx;
}
.footer>view:first-of-type{
  display: flex;
  flex-direction: row;
  align-items: center;
}
.footer>.left-opt-wrap{
  display: flex;
  flex-direction: row;
  align-items: center;
}
.content{
  padding: 35rpx;
  box-sizing: border-box;
  border-bottom: 1px solid #E1E1E1;
  background-color: white;
}
.detail{
  margin-left: 34rpx;
  flex: 1;
  display: flex;
  flex-direction: column;
}
.person-name-wrap{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.tx1{
  font-size:28rpx;
  font-family:Microsoft YaHei;
  font-weight:400;
  color:#333333;
}
.tx2{
  font-size:24rpx;
  font-family:Microsoft YaHei;
  font-weight:400;
  color:rgba(102,102,102,1);
}
.small-label{
  display: inline-block;
  font-size:18rpx;
  font-family:Microsoft YaHei;
  font-weight:400;
  color:rgba(255,46,48,1);
  padding: 1rpx 10rpx;
  border:1px solid rgba(255,46,48,1);
  border-radius:4rpx;
  margin-left: 10rpx;
}
.hot-wrap{
  flex-shrink: 0;
  margin-left: 20rpx;
}
.hot-wrap>text{
  font-size:28rpx;
  font-family:Microsoft YaHei;
  font-weight:400;
  color:rgba(255,46,46,1);
  margin-left: 10rpx;
}
.middle-label{
  border: 1px solid #FF2D2E;
  font-size:22rpx;
  font-family:Microsoft YaHei;
  font-weight:400;
  color:rgba(255,46,46,1);
  margin-right: 20rpx;
  display: inline-block;
  padding-left: 11rpx;
  padding-right: 11rpx;
   margin-bottom: 6rpx;
  border-radius:6rpx;
}
